                        @if (menuList.Count(p => p.ParentId == mp.Id) > 0)
                        {
                            @:</ul>
                        }

                        </li>
                    }
                }
                else
                {
                    <li class="has-sub">
                        <span class="submenu-button"></span>
                        @*@if (!@mp.url.Trim().ToLower().Contains("/eow/"))
                            {
                                <a href="@mp.url">@mp.Name</a>
                            }
                            else*@
                        @if (@mp.url.Trim().ToLower().Contains("/eow/ecf/index"))
                        {
