<div id="cssmenu">
    @*<div  id="menu-line"></div><div id="menu-button">Menu</div>*@
    @if (ViewBag.urlmenu != "N")
    {
        <ul style="display: block;">
            @foreach (var mp in menuList.Where(p => p.ParentId == 1))
            {
                if (Session["loginraisemode"] != null)
