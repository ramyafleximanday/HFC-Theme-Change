<script>
    $(document).ready(function () {
        $("#amotrd1").hide();
        $("#amotrd2").hide();
        $("#amotrd3").hide();

        var selmode = $("#raisermodeNames").val();
        if (selmode.trim() == "C") {
            $("#txtmodes").text('Central Team');
        }
        else if (selmode.trim() == "R") {
            $("#txtmodes").text('Central Team');
        }
        else if (selmode.trim() == "P") {
            $("#txtmodes").text('Proxy');
        }
        else {
            $("#txtmodes").text('Self');
        }
        //var selmode = $("#raisermodeNames option:selected").text();
        //if (selmode.trim() != "") {
        //    $("#txtmodes").text(selmode);
        //}
        //else {
        //    $("#txtmodes").text('Self');
        //}
    });
    $(document).ready(function () {

        var $radios = $('input:radio[name=Amort]');

        var txtecfdateh = $("#txtAmort").val();

        if (txtecfdateh.trim() == "Yes") {
            $("#amotrd1").fadeIn();
            $("#amotrd2").fadeIn();
            $("#amotrd3").fadeIn();
            $radios.filter('[value=Yes]').prop('checked', true);
        }
        else {
            $("#amotrd1").fadeOut();
            $("#amotrd2").fadeOut();
            $("#amotrd3").fadeOut();
            $radios.filter('[value=No]').prop('checked', true);
        }

        var txtclaimmonthh = $("#txtAmortFrom").val();
        if (txtclaimmonthh.trim() != "") {
            $("#txtAmortfron").val(txtclaimmonthh);
        }

        var txtecfamounth = $("#txtAmortToh").val();
        if (txtecfamounth.trim() != "") {
            $("#txtAmortto").val(txtecfamounth);
        }
        var txtecfamounthd = $("#txtAmortDescription").val();
        if (txtecfamounthd.trim() != "") {
            $("#txtAmortDescriptionid").val(txtecfamounthd);
        }

        $("#txtAmort").val('');
        $("#txtAmortFrom").val('');
        $("#txtAmortToh").val('');
        $("#txtAmortDescription").val('');

    });
</script>
