<script>
    $("#invoiceamountid").keyup(function (event) {
        if (event.which >= 37 && event.which <= 40) {
            event.preventDefault();
        }
        var currentval = $("#invoiceamountid").val();
        var testDecimal = testDecimals(currentval);
        if (testDecimal.length > 1) {
            currentval = currentval.slice(0, -1);
        }
        $("#invoiceamountid").val(replaceCommas(currentval));
    });
    $("#retentionamountid").keyup(function (event) {
        if (event.which >= 37 && event.which <= 40) {
            event.preventDefault();
        }
        var currentval = $("#retentionamountid").val();
        var testDecimal = testDecimals(currentval);
        if (testDecimal.length > 1) {
            currentval = currentval.slice(0, -1);
        }
        $("#retentionamountid").val(replaceCommas(currentval));
    });
    $("#releasedamountid").keyup(function (event) {
        if (event.which >= 37 && event.which <= 40) {
            event.preventDefault();
        }
        var currentval = $("#releasedamountid").val();
        var testDecimal = testDecimals(currentval);
        if (testDecimal.length > 1) {
            currentval = currentval.slice(0, -1);
        }
        $("#releasedamountid").val(replaceCommas(currentval));
    });
    $("#balanceamountid").keyup(function (event) {
        if (event.which >= 37 && event.which <= 40) {
            event.preventDefault();
        }
        var currentval = $("#balanceamountid").val();
        var testDecimal = testDecimals(currentval);
        if (testDecimal.length > 1) {
            currentval = currentval.slice(0, -1);
        }
        $("#balanceamountid").val(replaceCommas(currentval));
    });
    function testDecimals(currentval) {
        var count;
        currentval.match(/\./g) === null ? count = 0 : count = currentval.match(/\./g);
        return count;
    }
    function replaceCommas(yourNumber) {
        var components = yourNumber.toString().split(".");
        if (components.length === 1)
            components[0] = yourNumber;
        components[0] = components[0].replace(/\D/g, "").replace(/(\d)(?=(\d\d)+\d$)/g, "$1,");
        if (components.length === 2)
            components[1] = components[1].replace(/\D/g, "");
        return components.join(".");
    }

    var app = angular.module('myApp', ['ui.bootstrap']);
    app.filter('startFrom', function () {
        return function (input, start) {
            if (input) {
                start = +start;
                return input.slice(start);
            }
            return [];
        };
    });

    app.controller('PageCtrl', ['$scope', '$http', 'filterFilter', function ($scope, $http, filterFilter) {
        $http.get("../RetentionRelease/ToGetRetentionIndexrpt?" + new Date().getTime())
     .then(function (response) {
         $scope.items = response.data.qrylist;
         $scope.search = {};
         $scope.resetFilters = function () {
             $scope.search = {};
         };
         $scope.currentPage = 1;
         $scope.totalItems = $scope.items.length;
         $scope.entryLimit = 50;
         $scope.noOfPages = Math.ceil($scope.totalItems / $scope.entryLimit);
         $scope.noofsetpages = 5;
         $scope.$watch('search', function (newVal, oldVal) {
             $scope.filtered = filterFilter($scope.items, newVal);
             $scope.totalItems = $scope.filtered.length;
             $scope.noOfPages = Math.ceil($scope.totalItems / $scope.entryLimit);
             $scope.currentPage = 1;
             $scope.noofsetpages = 5;
         }, true);
     });
    }]);

    var objDialogforRel;
    var objDialogreleaselog;
    //var objDialogretentionrelease;
    $(document).ready(function () {
        objDialogretentionrelease = $("[id$='RetentionAttachement']");
        objDialogretentionrelease.dialog({
            autoOpen: false,
            modal: true,
            show: 'fade-in',
            close: 'fade-out'
        });
    });
    $(document).ready(function () {
        objDialogforRel = $("[id$='ForPartialViewforrel']");
        objDialogforRel.dialog({
            autoOpen: false,
            show: 'fade-in',
            close: 'fade-out',
            width: 760,
            height: 623
        });

        objDialogreleaselog = $("[id$='ForPartialViewlog']");
        objDialogreleaselog.dialog({
            autoOpen: false,
            show: 'fade-in',
            close: 'fade-out',
            width: 572,
            height: 550
        });
    });
    function gotocloserelclose() {
        window.parent.jQuery('#ForPartialViewlog').dialog('close');
    }
    function tagrel(element) {

        var row = $(element).closest('tr');
        var ecfnum = row.find('td:eq(0)').text();
        ecfnum = ecfnum.toString().trim();

        var url = '@Url.Action("RetentionReleaseDoc_Index", "RetentionRelease")?id=' + ecfnum + '&' + new Date().getTime();
        objDialogforRel.load(url);
        objDialogforRel.dialog({ title: 'Log' });
        objDialogforRel.dialog("open");
    }
    function tagrellog(element) {

        var row = $(element).closest('tr');
        var ecfnum = row.find('td:eq(0)').text();
        ecfnum = ecfnum.toString().trim();

        var url = '@Url.Action("RetentionReleaselog", "RetentionRelease")?id=' + ecfnum + '&' + new Date().getTime();
        objDialogreleaselog.load(url);
        objDialogreleaselog.dialog({ title: 'Log' });
        objDialogreleaselog.dialog("open");
    }

</script>
