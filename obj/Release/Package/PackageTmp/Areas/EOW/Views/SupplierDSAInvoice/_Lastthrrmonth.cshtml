@using IEM.Areas.EOW.Models;
@using IEM.Common
@model IEnumerable<IEM.Areas.EOW.Models.EOW_SupplierModelgrid>
@{
    ViewBag.Title = "Index";
    CmnFunctions objCmnFunctions = new CmnFunctions();
    var grid = new WebGrid(source: Model, canSort: true, canPage: true, rowsPerPage: 12, ajaxUpdateContainerId: "searchpogridl", ajaxUpdateCallback: "fb_employee();");
}

<div class="container" id="searchpogridl" style="width: 100%;">
    <div class="overflowy">
        <div style="max-height: 560px;">
            @grid.GetHtml(
                                                   htmlAttributes: new { id = "wgSuppliersuppliermainl" },
                                                   tableStyle: "tableSmall table-bordered table-hover table-responsive",
                        mode: WebGridPagerModes.All,
                        columns:
                                   grid.Columns(
                    //grid.Column("#", canSort: false, format: item => rowValExpense = rowValExpense + 1),
                         grid.Column("InvoiceDate", objCmnFunctions.Sorter("InvoiceDate", "Invoice Date", grid), canSort: false),
                         grid.Column("InvoiceNo", objCmnFunctions.Sorter("InvoiceNo", "Invoice No", grid), canSort: false),
                         grid.Column("Description", objCmnFunctions.Sorter("Description", "Description", grid), canSort: false),
                         grid.Column("Amount", objCmnFunctions.Sorter("Amount", "Amount", grid), canSort: false),
                          grid.Column("Provision", objCmnFunctions.Sorter("Provision", "Provision", grid), canSort: false)))

            @if (@ViewBag.NoRecords == "NoRecords")
            {
                <div class="borderStyle">
                    <center>
                        <b>  @ViewBag.NoRecordsFound</b>
                    </center>
                </div>
            }
        </div>
    </div>
    <br />
    <div style="width: 100%;" align="center">
        <div class="input-append ">
            <span class="input-append">
                <button type="button" id="btnCancel1h" title="Cancel" name="Cancel" class="btn btn-warning" onclick="GotoIndexivn()"><span style="color:white;" class="glyphicon glyphicon-remove-sign"></span>Cancel</button>
            </span>
        </div>
    </div>
</div>
<script>
    function fb_employee() {
        $("#grid td:nth-child(2),#grid th:nth-child(2)").show();
    }
    function GotoIndexivn() {
        objlastthreemontth.dialog("close");
        window.parent.jQuery('#ForPartialViewlastthreemontth').dialog('close');
    }
</script>