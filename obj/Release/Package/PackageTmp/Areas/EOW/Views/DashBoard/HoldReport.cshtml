@{
    ViewBag.Title = "ECFMyRequestHold";
}
<script>
    $(document).ready(function () {
        $("#idecfdathold").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd-mm-yy',
            maxDate: '-id',
        });
    });
</script>
<div>
    <div ng-controller="PageCtrl">
        <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;font-family:Tahoma;">
            <thead style="width:100%;">
                <tr>
                    <th class="thfix" style="display:none;">
                        ecf Gid
                    </th>
                    <th class="thfix" style="width:4%;">
                        S.No
                    </th>
                    <th class="thfix" style="width:11%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyreq = 'ECFNo'; sortReversemyhold = !sortReversemyhold">
                            ECF No
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFNo' && !sortReversemyhold" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFNo' && sortReversemyhold" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchMyecfhold.ECFNo">
                    </th>
                    <th class="thfix" style="width:9.5%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyreq = 'ECFDate'; sortReversemyhold = !sortReversemyhold">
                            ECF Date
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFDate' && !sortReversemyhold" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFDate' && sortReversemyhold" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" id="idecfdathold" class="textboxStyle" ng-model="searchMyecfhold.ECFDate">
                    </th>
                    <th class="thfix" style="width:15%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyreq = 'ECFRaiser'; sortReversemyhold = !sortReversemyhold">
                            ECF Raiser
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFRaiser' && !sortReversemyhold" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFRaiser' && sortReversemyhold" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchMyecfhold.ECFRaiser">
                    </th>
                    <th class="thfix" style="width:17%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyreq = 'SupplierorEmployeename'; sortReversemyhold = !sortReversemyhold">
                            Supplier/Employee Name
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'SupplierorEmployeename' && !sortReversemyhold" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'SupplierorEmployeename' && sortReversemyhold" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchMyecfhold.SupplierorEmployeename">
                    </th>
                    <th class="thfix" style="width:15%;">
                        Claim Type<br />
                        <select class="textboxStyle" ng-model="searchMyecfhold.DocSubTypeName">
                            <option value="">ALL</option>
                            <option value="Employee Claim - Regular">Employee Claim - Regular</option>
                            <option value="Employee Claim - Local Coveyance">Employee Claim - Local Coveyance</option>
                            <option value="Employee Claim - Travel">Employee Claim - Travel</option>
                            <option value="Supplier Invoice">Supplier Invoice</option>
                            <option value="Supplier Invoice - DSA">Supplier Invoice - DSA</option>
                            <option value="Employee Advance Request">Employee Advance Request</option>
                            <option value="Supplier Advance Request">Supplier Advance Request</option>
                            <option value="Employee Petty Cash">Employee Petty Cash</option>
                            <option value="Rent/Lease Advance">Rent/Lease Advance</option>
                        </select>
                    </th>
                    <th class="thfix" style="width:10%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyreq = 'ECFAmount'; sortReversemyhold = !sortReversemyhold">
                            ECF Amount
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFAmount' && !sortReversemyhold" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypemyreq == 'ECFAmount' && sortReversemyhold" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" id="txtAmounth" class="textboxStyle" ng-model="searchMyecfhold.ECFAmount">
                    </th>
                    <th class="thfix">
                        Status<br />
                    </th>
                    <th class="thfix" style="width:11.2%;">Action</th>
                </tr>
            </thead>
        </table>
        <div style="height: 550px;overflow-y: scroll;">
            <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;table-layout: fixed;font-family:Tahoma;">
                <tbody ng-show="filtered5.length!=0" ng-repeat="item in filtered5 = itemsMyecfhold| orderBy:sortTypemyreq:sortReversemyhold | filter:searchMyecfhold | startFrom:(currentPage5-1)*entryLimit5 | limitTo:entryLimit5" style="width:100%;">
                    <tr>
                        <td class="tdfix" style="display:none;">
                            {{item.QueueId}}
                        </td>
                        <td class="tdfix" style=" width:4%;" align="center">
                            {{$index+1}}
                        </td>
                        <td title="{{item.ECFNo}}" class="tdfix" style=" width:11.28%;overflow: hidden;">
                            <span> {{item.ECFNo}}</span>
                        </td>
                        <td title="{{item.ECFDate}}" class="tdfix" style=" width:9.63%;overflow: hidden;">
                            <span> {{item.ECFDate}}</span>
                        </td>
                        <td title="{{item.ECFRaiser}}" class="tdfix" style=" width:15.2%;overflow: hidden;">
                            <span> {{item.ECFRaiser}}</span>
                        </td>
                        <td title="{{item.SupplierorEmployeename}}" class="tdfix" style=" width:17.3%;overflow: hidden;">
                            <span> {{item.SupplierorEmployeename}}</span>
                        </td>
                        <td title="{{item.DocSubTypeName}}" class="tdfix" style=" width:15%;overflow: hidden;">
                            <span>{{item.DocSubTypeName}}</span>
                        </td>
                        <td title="{{item.ECFAmount}}" class="tdfix" style=" width:10%;overflow: hidden;">
                            <span> {{item.ECFAmount}}</span>
                        </td>
                        <td title="{{item.ECFStatus}}" class="tdfix" style="overflow: hidden;">
                            <span> {{item.ECFStatus}}</span>
                        </td>
                        <td class="tdfix" style="width:10%;" align="center">
                            <a id="idview" onclick="HoldRelease(this)" title="Delete">
                                <span class="btn btn-link color">Release</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
                <tfoot ng-show="filtered5.length==0">
                    <tr>
                        <td colspan="10" style="text-align:left;"><div class="gridMessage" style="width:100%; border:none;"><center>No Records Found</center></div></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div ng-show="filtered5.length>0">
            <table style="width:100%;">
                <tr>
                    <td style="padding-left:10px" align="left"> <div class="gridCount" style="text-align:left;font-size:14px;">Total Records : {{totalItems5}}  of {{filtered5.length}}</div></td>
                    <td align="right">
                        <pagination total-items="totalItems5"
                                    ng-model="currentPage5"
                                    page="currentPage5"
                                    max-size="noofsetpages5"
                                    boundary-links="true"
                                    items-per-page="entryLimit5" class="pagination-sm" style="cursor:pointer;font-size:14px;">
                        </pagination>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
