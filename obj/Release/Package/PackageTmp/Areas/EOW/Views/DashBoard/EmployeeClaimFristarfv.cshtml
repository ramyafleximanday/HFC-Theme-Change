@model  IEM.Areas.EOW.Models.EOW_EmployeeeExpense
@using IEM.Areas.EOW.Models
@{
    EOW_EmployeeeExpense sh = (EOW_EmployeeeExpense)ViewBag.EOW_EmployeeeExpenseheader;

}
<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<style>
    .diapy {
        display: none;
    }

    .wth {
        width: 100%;
    }
</style>


@using (Html.BeginForm())
{
    <br />
    <table class="myTableStyleTabNew" style="width: 100%;">
        <tr>
            <td style="width: 75%;background-color: #F5F5F5;border-radius: 10px;padding: 2px 12px 0px 10px;">
                <table class="myTableStyleTabNew" style="width: 100%;">
                    <tr>
                        <td>
                            <span>ARF Date</span><br />
                            @Html.TextBoxFor(n => sh.ECF_Date, new { disable = true, @class = "textboxStyle ", @id = "txtecfdatet", @disabled = "disabled" })

                        </td>
                        <td>
                            <span>ARF Type</span><br />
                            @Html.TextBoxFor(n => sh.arftype, new { disable = true, @class = "textboxStyle ", @id = "txtclaimmontht", @disabled = "disabled" })
                        </td>
                        <td>
                            <span>ARF Amount</span><br />
                            @Html.TextBoxFor(n => sh.ECF_Amount, new { disable = true, @class = "textboxStyle ", @id = "txtecfamountt", @disabled = "disabled" })
                        </td>
                        <td>
                            <span>ARF Number</span><br />
                            @Html.TextBoxFor(n => sh.ecfno, new { disable = true, @class = "textboxStyle", @id = "txtecfno", @disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <span> Supplier/Employee Code </span><br />
                            @Html.TextBoxFor(n => sh.arfempsupcode, new { disable = true, @class = "textboxStyle ", @id = "txtecfamountt", @disabled = "disabled" })
                        </td>
                        <td colspan="2">
                            <span> Supplier/Employee Name </span><br />
                            @Html.TextBoxFor(n => sh.arfempsupname, new { disable = true, @class = "textboxStyle ", @id = "txtecfamountt", @disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <span>ECF Description</span><br />
                            @Html.TextAreaFor(n => sh.ecfdescription, new { disable = true, @class = "textboxStyle  wth", @id = "txtecfdescription", @disabled = "disabled" })
                        </td>
                    </tr>

                    @*selva 04-01-2021 create*@
                    <tr>
                        <td colspan="5" style="font-size:16px;color:red;">
                            <span>Pay Method : </span> <label id="lblPayMethod" style="font-weight:normal">@sh.ecf_paymode</label>
                        </td>

                    </tr>
                </table>
            </td>
            <td style="width: 1%;"></td>
            <td align="left" style="width:25%; background-color: #E3E3E3; border-radius: 10px; padding: 2px 6px 2px 6px;">
                <fieldset>
                    <legend><center> <span style="font-weight:bold; font-size:14px; padding:3px;">RAISER DETAILS</span></center></legend>
                    <table class="myTableStyleTabNew" style="border-top:solid 1px black;" width="100%">
                        <tr>
                            <td>
                                <span>Raiser Mode</span>
                            </td>
                            <td style="width:1%; padding-right:3px; padding-left:3px;">:</td>
                            <td align="left">
                                @Html.DropDownListFor(n => n.raisermodeId, sh.Raiser_Modedata, new { @class = " diapy textboxStyle required", @id = "raisermodeNames", @disabled = "disabled" })
                                <label id="txtmodes"></label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Raiser Code</span>
                            </td>
                            <td style="width:1%; padding-right:3px; padding-left:3px;">:</td>
                            <td align="left">
                                <label id="txtraisercode">@sh.Raiser_Code</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Raiser Name</span>
                            </td>
                            <td style="width:1%; padding-right:3px; padding-left:3px;">:</td>
                            <td align="left">
                                <label id="txtraisername">@sh.Raiser_Name</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Grade</span>
                            </td>
                            <td style="width:1%; padding-right:3px; padding-left:3px;">:</td>
                            <td align="left">
                                <label id="txtgrade">@sh.Grade</label>
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </td>
        </tr>
    </table>
}

