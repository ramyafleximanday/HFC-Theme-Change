@{
    ViewBag.Title = "ECFMyRequest";
}

<div>
    <div ng-controller="ecfController">
        <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;table-layout: fixed;font-family:Tahoma;" border="1">
            <thead style="width:100%;">
                <tr>
                    <th>
                        <center>Advance Type</center>
                    </th>
                    <th colspan="2">
                        <center>Purpose</center>
                    </th>
                    <th>
                        <center>liquidation Date</center>
                    </th>
                    <th>
                        <center>Business Segment</center>
                    </th>
                    <th>
                        <center>Cost Center</center>
                    </th>
                    <th>
                        <center>Branch Code</center>
                    </th>
                    <th>
                        <center>Advance Amount</center>
                    </th>
                </tr>
            </thead>
            <tbody ng-show="ecfdetails.length!=0" ng-repeat="ecfdetail in filtered = ecfdetails" style="width:100%;font-family:Tahoma;">
                <tr>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.ecfarf_advancetype}}</span>
                    </td>
                    <td colspan="2" style="overflow: hidden;">
                        <span> {{ecfdetail.ecfarf_desc}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.ecfarf_liq_date}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.ecfarf_fc_code}}</span>
                    </td>
                    <td style="overflow: hidden;" align="right">
                        <span>{{ecfdetail.ecfarf_cc_code}}</span>
                    </td>
                    <td style="overflow: hidden;" align="right">
                        <span>{{ecfdetail.ecfarf_ou_code}}</span>
                    </td>
                    <td style="overflow: hidden;" align="right">
                        <span>{{ecfdetail.AmountINR}}</span>
                    </td>
                </tr>
            </tbody>
            <tfoot ng-show="ecfdetails.length==0">
                <tr>
                    <td align="center" colspan="5"><center>No Records Found</center></td>
                </tr>
            </tfoot>
        </table>
        <table style="width:100%;table-layout: fixed;">
            <tr>
                <td align="left"><b><font>Credit Total</font></b></td>
                <td align="right"><b><font> {{ getTotal() }}</font></b></td>
            </tr>
        </table>
    </div>
</div>


