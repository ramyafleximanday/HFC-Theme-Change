@{
    ViewBag.Title = "ECFMyRequest";
}

<div>
    <div ng-controller="ecfController">
        <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="font-family:Tahoma;width:100%;table-layout: fixed;" border="1">
            <thead style="width:100%;">
                <tr>
                    <th>
                        <center>Pay To</center>
                    </th>
                    <th>
                        <center>Beneficiary Name</center>
                    </th>
                    <th>
                        <center>Payment Mode</center>
                    </th>
                    <th>
                        <center>Bank A/C No./Payment Ref No.</center>
                    </th>
                    <th>
                        <center>Credit Amount</center>
                    </th>
                </tr>
            </thead>
            <tbody ng-show="ecfdetailsctchkr.length!=0" ng-repeat="ecfdetail in filtered = ecfdetailsctchkr" style="width:100%;">
                <tr>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.Employeename}}</span>
                    </td>
                    <td  style="overflow: hidden;">
                        <span> {{ecfdetail.Beneficiary}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.PaymentModeName}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.RefNoName}}</span>
                    </td>
                    <td style="overflow: hidden;" align="right">
                        <span>{{ecfdetail.AmountINR}}</span>
                    </td>
                </tr>
            </tbody>
            <tfoot ng-show="ecfdetailsctchkr.length==0">
                <tr>
                    <td align="center" colspan="5"><center>No Records Found</center></td>
                </tr>
            </tfoot>
        </table>
        <table style="width:100%;table-layout: fixed;">
            <tr>
                <td align="left"><b><font>Credit Total</font></b></td>
                <td align="right"><b><font> {{ getTotalchkr() }}</font></b></td>
            </tr>
        </table>
    </div>
</div>


