@model  IEM.Areas.EOW.Models.ModeOfTravelEntity
@{
    ViewBag.Title = "Index";

}
@using (Html.BeginForm())
{
            <table class="myTableStyleTabNew">
                <tr>
                    <td>
                        <div>
                            <span>Mode Of Travel </span>
                            <br />
                            <input type="text"
                                   name="ModeOfTravel"
                                   id="ModeOfTravelIdEdit"
                                   value="@Session["TravelName"]"
                                   class="textboxStyle valid"
                                   style="display: block;width:306px"
                                   readonly="readonly" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="padding-top:16px;">
                        @if (@ViewBag.Modeflag == 'Y'.ToString())
                        {
                         <input type="checkbox" id="chkid" class="chkclass" disabled="disabled" value="Distance/Rate" checked="checked" title="Distance/Rate" readonly="readonly" /><span style="padding-left:15px">Distance/Rate</span>
                        }
                        else
                        {
                            <input type="checkbox" id="chkid" readonly="readonly" disabled="disabled" class="chkclass" value="Distance/Rate" title="Distance/Rate" /><span style="padding-left:15px">Distance/Rate</span>
                        }
                    </td>
                </tr>
            </table>
        <br />
        <table class="myTableStyleTabNew" align="center">
            <tr>
                <td>
                    <div>
                        <button type="button" class="btn btn-warning" value="Close" onclick="goToIndex()"> <span style="color:white;" class="glyphicon glyphicon-remove"></span>Close</button>
                    </div>
                   
                </td>
            </tr>
        </table>
}
<script>
    function goToIndex() {
        window.parent.jQuery('#ForPartialViewMode').dialog('close');
        $('#gridModeOfTravelid').find('tr').css('background', 'none');
    }
    $(".ui-icon-closethick").click(function () {
        $('#gridModeOfTravelid').find('tr').css('background', 'none');
    });
    $("#ModeOfTravelIdEdit").keyup(function () {
        var txtContractTo = $("#ModeOfTravelIdEdit").val();
        if (txtContractTo.trim() != "") {
            $("#ModeOfTravelIdEdit").removeClass('required');
            $("#ModeOfTravelIdEdit").addClass('valid');
        }
        else {
            $("#ModeOfTravelIdEdit").removeClass('valid');
            $("#ModeOfTravelIdEdit").addClass('required');
        }
    });
</script>