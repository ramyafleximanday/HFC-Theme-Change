            }
            if (parseFloat(valarf) < parseFloat(val2)) {
                jAlert("The Amount Should Not Be Less Then Selected ARF Exception Amount '" + valarf + "'", "Message");
                return false;
            }

        }
        else {
            if (paytxtcccardno == null || paytxtcccardno == "") {
                jAlert("Please Enter Ref No.", "Message");
                $("#ddlRefNo").focus();
