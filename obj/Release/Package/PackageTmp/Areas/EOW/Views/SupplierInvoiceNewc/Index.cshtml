                                    location = '@Url.Action("Index", "Dashboard", new { area = "Dashboard" })';
                                   
                                }
                            });
                        }
                    }, 'json');
                }
                else {
                    hideProgress();
                    $('#btnSubmitfinal').attr('disabled', false);
                }
            });
        }
    }
