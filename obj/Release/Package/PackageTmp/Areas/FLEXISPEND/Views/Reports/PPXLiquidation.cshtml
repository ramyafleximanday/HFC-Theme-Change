@{
    ViewBag.Title = "PPXLiquidation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<style>
    table, th, td {
        white-space: nowrap;
    }
</style>
<div class="pageHeadingLayout">
    <span class="pageHeading">PPX Liquidation Report</span>
</div>
<div class="well">
    <table class="myTableStyleTabNew" style="width:100%;">
        <tr>

            <td width="25%" style="padding: 0px 10px">
                <span>ECF Date From</span>
                <br />
                <input type="text"
                       id="txtDateFrom"
                       class="fstextbox " />
            </td>
            <td width="25%" style="padding: 0px 10px">
                <span>ECF Date To</span>
                <br />
                <input type="text"
                       id="txtDateTo"
                       class="fstextbox " />
            </td>
            <td width="25%" style="padding: 0px 10px">
                <span>ECF No</span>
                <br />
                <input type="text"
                       id="txtEcfNo"
                       class="fstextbox" />
            </td>
            <td width="25%" style="padding: 0px 10px; vertical-align:bottom; text-align:right;">
                <button class="btn btn-primary" type="button" style="margin-top:10px;  color:white;" data-bind="click: function() { $root.DownloadPPXLiquidationReport(); }, visible: PPXReportArray().length > 0">
                    <span style="color:white;" class="glyphicon glyphicon-download-alt"></span>
                    Export Excel
                </button>
                <button class="btn btn-primary" type="button" style="margin-top:10px;  color:white;" data-bind="click: function() { $root.SearchPPXLiquidationReport(); }">
                    <span style="color:white;" class="glyphicon glyphicon-search"></span>
                    Search
                </button>
                <button class="btn btn-primary" type="button" style="margin-top:10px;  color:white;" data-bind="click: function() { $root.ClearPPXLiquidationReport(); }">
                    <span style="color:white;" class="glyphicon glyphicon-refresh"></span>
                    Clear
                </button>
            </td>
        </tr>
    </table>

    <div class="table-responsive" style="margin-top: 15px;">
        <table id="gvReport" class="tableSmall table-bordered table-hover" data-bind="visible: PPXReportArray().length > 0">
            <thead>
                <tr>
                    <th align="center" style="padding-right:20px;">
                        Sl No
                    </th>
                    <th style="padding-right:20px;">
                        ECF No
                    </th>
                    <th style="padding-right:20px;">
                        Invoice No
                    </th>
                    <th style="padding-right:20px;">
                        Vendor Code
                    </th>
                    <th style="padding-right:20px;">
                        Vendor Name
                    </th>
                    <th style="padding-right:20px;">
                        Amount
                    </th>
                    <th style="padding-right:20px;">
                        Module
                    </th>
                    <th style="padding-right:20px;">
                        ARF No
                    </th>
                    @*<th style="padding-right:20px;">
                        Status
                    </th>*@
                    <th style="padding-right:20px;">
                        Liqudation Date
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach:{ data: PPXReportArray, afterRender: DatatablePPXLiquidation }, visible: PPXReportArray().length > 0">
                <tr>
                    <td align="center">
                        <span data-bind="text:$index()+1"></span>
                    </td>
                    <td>
                        <span data-bind="text: ECFNo"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: InvoiceNo"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: Vendorcode"></span>
                    </td>
                    <td>
                        <span data-bind="text: Vendorname"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: Amount"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: Module"></span>
                    </td>
                    <td>
                        <span data-bind="text: PPXNo"></span>
                    </td>
                    @*<td>
                        <span data-bind="text: Ecfstatus"></span>
                    </td>*@
                    <td>
                        <span data-bind="text: LiqudationDate"></span>
                    </td>
                    
                </tr>
            </tbody>
        </table>
    </div>


</div>
<script>
    var MUrlDet = "@Url.Action("GetBankSummary", "Reports")"
    var MUrlHelper = "@Url.Action("GetAutoCompleteCourier", "Helper")"
</script>
<script src="@Url.Content("~/Areas/FLEXISPEND/FS_UserScript/jsReports.js")" type="text/javascript"></script>

