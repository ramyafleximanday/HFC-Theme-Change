@{
    ViewBag.Title = "Advance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<style>
    table, th, td {
        white-space: nowrap;
    }
</style>
<div class="pageHeadingLayout">
    <span class="pageHeading">Advance Report</span>
</div>
<div class="well">
    <table class="myTableStyleTabNew" style="width:100%;">
        <tr>

            <td width="25%" style="padding: 0px 10px">
                <span>ECF Date From</span>
                <br />
                <input type="text"
                       id="txtDateFrom"
                       class="fstextbox " />
            </td>
            <td width="25%" style="padding: 0px 10px">
                <span>ECF Date To</span>
                <br />
                <input type="text"
                       id="txtDateTo"
                       class="fstextbox " />
            </td>
            <td width="25%" style="padding: 0px 10px">
                <span>Liquidation Date From</span>
                <br />
                <input type="text"
                       id="txtLiqDateFrom"
                       class="fstextbox" />
            </td>
            <td width="25%" style="padding: 0px 10px">
                <span>Liquidation Date To</span>
                <br />
                <input type="text"
                       id="txtLiqDateTo"
                       class="fstextbox" />
            </td>
        </tr>
        <tr>
            <td style="padding: 0px 10px">
                <span>ECF No</span>
                <br />
                <input type="text"
                       id="txtEcfNo"
                       class="fstextbox" />
            </td>
            <td width="25%" style="padding: 0px 10px">
                <span>Raiser ID</span>
                <br />

                <input type="text"
                       id="txtRaiser"
                       class="fstextbox" />
            </td>
            <td width="25%" style="padding: 0px 10px;">
                <span>Vendor Name</span>
                <br />

                <input type="text"
                       id="txtVendor"
                       class="fstextbox" />
            </td>
        </tr>
        <tr>

            <td width="25%" style="padding: 0px 10px;">
                <span>GL Code</span>
                <br />

                <input type="text"
                       id="txtGL"
                       class="fstextbox" />
            </td>
            <td width="25%" style="padding: 0px 10px;">
                <span>Location Code</span>
                <br />

                <input type="text"
                       id="txtLoc"
                       class="fstextbox" />
            </td>
            <td colspan="3" style="padding: 0px 10px; vertical-align:bottom; text-align:right;">
                <button class="btn btn-primary" type="button" style="margin-top:10px;  color:white;" data-bind="click: function() { $root.DownloadAdvanceReport(); }, visible: AdvanceReportArray().length > 0">
                    <span style="color:white;" class="glyphicon glyphicon-download-alt"></span>
                    Export Excel
                </button>
                <button class="btn btn-primary" type="button" style="margin-top:10px;  color:white;" data-bind="click: function() { $root.SearchAdvanceReport(); }">
                    <span style="color:white;" class="glyphicon glyphicon-search"></span>
                    Search
                </button>
                <button class="btn btn-primary" type="button" style="margin-top:10px;  color:white;" data-bind="click: function() { $root.ClearAdvanceReport(); }">
                    <span style="color:white;" class="glyphicon glyphicon-refresh"></span>
                    Clear
                </button>
            </td>
        </tr>
    </table>

    <div class="table-responsive" style="margin-top: 15px;">
        <table id="gvReport" class="tableSmall table-bordered table-hover" data-bind="visible: AdvanceReportArray().length > 0">
            <thead>
                <tr>
                    <th align="center" style="padding-right:20px;">
                        Sl No
                    </th>
                    <th style="padding-right:20px;">
                        ARF No
                    </th>
                    <th style="padding-right:20px;">
                        Raiser Name
                    </th>
                    <th style="padding-right:20px;">
                        ARF Amount
                    </th>
                    <th style="padding-right:20px;">
                        Liquidation Amount
                    </th>
                    <th style="padding-right:20px;">
                        Out Amount
                    </th>
                    <th style="padding-right:20px;">
                        Location
                    </th>
                    <th style="padding-right:20px;">
                        GL Code
                    </th>
                    <th style="padding-right:20px;">
                        Vendar Name
                    </th>
                    <th style="padding-right:20px;">
                        Cross Amount
                    </th>
                    <th style="padding-right:20px;">
                        TDS Amount
                    </th>
                    <th style="padding-right:20px;">
                        WCT Amount
                    </th>
                    <th style="padding-right:20px;">
                        Net Amount
                    </th>
                    <th style="padding-right:20px;">
                        Purpose
                    </th>
                    <th style="padding-right:20px;">
                        Process Date
                    </th>
                    <th style="padding-right:20px;">
                        Ageing
                    </th>
                    <th style="padding-right:20px;">
                        Bucket
                    </th>
                    <th style="padding-right:20px;">
                        Target Liquidation Date
                    </th>
                    <th style="padding-right:20px;">
                        Department
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach:{ data: AdvanceReportArray, afterRender: DatatableAdvance }, visible: AdvanceReportArray().length > 0">
                <tr>
                    <td align="center">
                        <span data-bind="text:$index()+1"></span>
                    </td>
                    <td>
                        <span data-bind="text: PPXNO"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: RaiserName"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: Amount"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: LiqAmount"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: OutAmount"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: Location"></span>
                    </td>
                    <td>
                        <span data-bind="text: GLCode"></span>
                    </td>
                    <td>
                        <span data-bind="text: Vendorname"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: GrossAmount"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: TDSAmount"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: WCTAmount"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: NetAmount"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: Purpose"></span>
                    </td>
                    <td align="center">
                        <span data-bind="text: ProcessDate"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: Ageing"></span>
                    </td>
                    <td align="left">
                        <span data-bind="text: Bucket"></span>
                    </td>
                    <td align="center">
                        <span data-bind="text: TargetLiqDate"></span>
                    </td>
                    <td>
                        <span data-bind="text: Department"></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


</div>
<script>
    var MUrlDet = "@Url.Action("GetBankSummary", "Reports")"
    var MUrlHelper = "@Url.Action("GetAutoCompleteCourier", "Helper")"
</script>
<script src="@Url.Content("~/Areas/FLEXISPEND/FS_UserScript/jsReports.js")" type="text/javascript"></script>

