@model IList<IEM.Areas.FLEXISPEND.Models.ChequePrint>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print Cheque</title>
</head>
<body>
    @if (Model != null)
    {
        int i = 1;
        foreach (var item in Model)
        {
		<div style="width:100%;">
            <table style="margin-top:-3px; width:1200px; height:349px; font-family:Arial;" width="100%">
                <!--Date-->
                <tr>
                    <td style="width:67%;"></td>
                    <td style="width:33%; letter-spacing: 8px; padding-left: -5px; font-size: 20px;">
                        @item.Date
                    </td>
                </tr>
                <!--Pay-->
                <tr>
                    <td colspan="2" style="width:100%; vertical-align:middle; height:30px; padding-top: 47px; padding-left: 15px; font-size: 20px;">
                        @item.Pay
                    </td>
                </tr>
                <!--Amount In Words-->
                <tr>
                    <td colspan="2" style="width:100%; padding-top:20px; height:30px; vertical-align:middle; font-size: 22px;">
                        @item.Amount0 
                    </td>
                </tr>
                <tr>
                    <td style="width:67%; vertical-align: middle; height:30px; font-size: 22px; padding-left:20px; padding-top:10px;">
                        @*@item.Amount1*@
                    </td>
                    <td style="width:33%; vertical-align: middle; height:30px; padding-left: 20px; font-size: 22px; padding-top:10px;">
                        @item.Rupees
                    </td>
                </tr>
                <tr>
                    <td colspan="2"></td>
                </tr>
                <tr>
                    <td colspan="2" style="width:100%; padding-top:125px; padding-left:280px; vertical-align:middle; text-align:left; font-size: 22px;">
                        @item.PVNo
                    </td>
                </tr>
		<tr>
                    <td colspan="2" style="width:100%; padding-top:75px;">
<span></span>
                    </td>
                </tr>
            </table>
            </div>
            if (i != Model.Count)
            {
                <p style="page-break-before:always"></p>
            }
            i++;
        }
    }
</body>
</html>

<script type="text/javascript">
    window.print()
    window.focus()
</script>
