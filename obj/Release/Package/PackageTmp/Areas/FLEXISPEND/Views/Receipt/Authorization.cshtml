@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<style>
    table, th, td {
        white-space: nowrap;
    }
</style>
<div class="pageHeadingLayout">
    <span class="pageHeading">Receipt Entry Checker</span>
    </div>
    <div class="well">
        <table class="myTableStyleTabNew" style="width:100%;">
            <tr>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Receipt Date From </span>
                    <br />
                    <input type="text"
                           id="txtReceiptDateFrom"
                           onkeypress="return isEvent(event)"
                           class="fstextbox fsDatePicker" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Receipt Date To </span>
                    <br />
                    <input type="text"
                           id="txtReceiptDateTo"
                           onkeypress="return isEvent(event)"
                           class="fstextbox fsDatePicker" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Receipt No</span>
                    <br />
                    <input type="text"
                           id="txtReceiptNo"
                           maxlength="20"
                           onkeypress="return isNumberKey(event)"
                           class="fstextbox" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Receipt From</span>
                    <br />
                    <select name="ddlReceiptFrom" id="ddlReceiptFrom" class="fstextbox"
                            data-bind="options: SearchReceiptFromArray, optionsText: 'Text', optionsValue:'Id', value:0, event:{ change:$root.ReceiptFromChanged }"></select>
                </td>
            </tr>
            <tr>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Employee Code</span>
                    <br />
                    <input type="hidden" id="hdfEmpCodeId" value="0" />
                    <input type="text"
                           id="txtEmpCode"
                           name="txtEmpCode"
                           class="fstextbox" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Employee Name</span>
                    <br />
                    <input type="hidden" id="hdfEmpName" value="0" />
                    <input type="text"
                           id="txtEmpName"
                           name="txtEmpName"
                           class="fstextbox" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Supplier Code</span>
                    <br />
                    <input type="hidden" id="hdfSupplierId" value="0" />
                    <input type="text"
                           id="txtSupplierCode"
                           name="txtSupplierCode"
                           class="fstextbox" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Supplier Name</span>
                    <br />
                    <input type="hidden" id="hdfSupplierName" value="0" />
                    <input type="text"
                           id="txtSupplierName"
                           name="txtSupplierName"
                           class="fstextbox" />
                </td>
            </tr>
            <tr>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Pay From </span>
                    <br />
                    <input type="text"
                           id="txtPayFrom"
                           onkeypress="return isEvent(event)"
                           class="fstextbox fsDatePicker" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Pay To </span>
                    <br />
                    <input type="text"
                           id="txtPayTo"
                           onkeypress="return isEvent(event)"
                           class="fstextbox fsDatePicker" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Bank Name</span>
                    <br />
                    <select name="ddlBank" id="ddlBank" class="fstextbox"
                            data-bind="options: BankArray, optionsText: 'Text', optionsValue:'Id', value:0, optionsCaption:'-Select All-'"></select>
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Receipt Source</span>
                    <br />
                    <select name="ddlReceiptSource" id="ddlReceiptSource" class="fstextbox"
                            data-bind="options: SourceArray, optionsText: 'Text', optionsValue:'Id', value:0, optionsCaption:'-Select All-'"></select>
                </td>
            </tr>
            <tr>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Receipt Mode</span>
                    <br />
                    <select name="ddlReceiptMode" id="ddlReceiptMode" class="fstextbox"
                            data-bind="options: ReceiptModeArray, optionsText: 'Text', optionsValue:'Id', value:0, optionsCaption:'-Select All-'"></select>
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Amount</span>
                    <br />
                    <input type="text"
                           id="txtAmount"
                           maxlength="10"
                           @*onkeypress="return isNumberKey(event)"*@
                           class="fstextbox" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px;">
                    <span>Ref No</span>
                    <br />
                    <input type="text"
                           id="txtPayRefNo"
                           maxlength="30"
                           onkeypress="return isNumberAndLetterAndSpace(event)"
                           class="fstextbox" />
                </td>
                <td style="width:25%; padding:0px 10px 0px 3px; vertical-align:bottom; text-align:right;">
                    <button class="btn btn-primary" id="btnsearch" data-bind="click: $root.Search" type="button" style="margin-top:10px;  color:white;">
                        <span style="color:white;" class="glyphicon glyphicon-search"></span>
                        Search
                    </button>
                    <button class="btn btn-primary" data-bind="click: $root.ClearFilter" type="button" style="margin-top:10px;  color:white;">
                        <span style="color:white;" class="glyphicon glyphicon-refresh"></span>
                        Clear
                    </button>
                </td>
            </tr>
        </table>
        <div class="table-responsive" style="margin-top: 15px;">
            <table id="gvReceiptEntry" class="tableSmall table-bordered table-hover" data-bind="visible: ReceiptEntryArray().length > 0">
                <thead>
                    <tr>
                        <th style="width:4%; min-width:50px;">
                            SLNo
                        </th>
                        <th style="width:8%; min-width:100px;" class="colDate">
                            Receipt Date
                        </th>
                        <th style="width:8%; min-width:100px;">
                            Receipt No
                        </th>
                        <th style="width:8%; min-width:100px;">
                            Receipt From
                        </th>
                        <th style="width:8%; min-width:150px;">
                            Raiser Name
                        </th>
                        <th style="width:12%; min-width:200px;">
                            Employee/Supplier Name
                        </th>
                        <th style="width:8%; min-width:120px;">
                            Amount
                        </th>
                        <th style="width:8%; min-width:100px;" class="colDate">
                            Pay Date
                        </th>
                        <th style="width:8%; min-width:100px;">
                            PayMode
                        </th>
                        <th style="width:8%; min-width:100px;">
                            Pay Ref No
                        </th>
                        <th style="width:4%; min-width:60px;" class="nosort">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach:{ data: ReceiptEntryArray, afterRender: DatatableCall }, visible: ReceiptEntryArray().length > 0">
                    <tr>
                        <td align="center">
                            <span data-bind="text: SNo"></span>
                        </td>
                        <td align="center">
                            <span data-bind="text: receiptDate"></span>
                        </td>
                        <td>
                            <span data-bind="text: receiptNo"></span>
                        </td>
                        <td>
                            <span data-bind="text: receiptFrom"></span>
                        </td>
                        <td>
                            <span data-bind="text: Raiser"></span>
                        </td>
                        <td>
                            <span data-bind="text: EmployeeSupplierName"></span>
                        </td>
                        <td align="right">
                            <span data-bind="text: $root.formatNumber(amount)"></span>
                        </td>
                        <td align="center">
                            <span data-bind="text: payDate"></span>
                        </td>
                        <td>
                            <span data-bind="text: payMode"></span>
                        </td>
                        <td>
                            <span data-bind="text: payRefNo"></span>
                        </td>
                        <td align="center">
                            <span title="Select" data-bind="click: $root.Select" style="cursor:pointer; color:blue;">Select</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div style="display:none" id="digReceiptDet">
        <input type="hidden" id="hdfReceiptId" value="0" />
        <table class="myTableStyleTabNew" style="width:100%;">
            <tr>
                <td style="width:33%; padding:0px 10px">
                    <span> Receipt Date</span>
                    <br />
                    <input type="text"
                           id="txtEReceiptDate"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
                <td style="width:33%; padding:0px 10px">
                    <span> Receipt From</span>
                    <br />
                    <input type="text"
                           id="ddlEReceiptFrom"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
                <td style="width:33%; padding:0px 10px">
                    <span> Receipt Source</span>
                    <br />
                    <input type="text"
                           id="ddlESource"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
            </tr>
            <tr>
                <td style="padding:0px 10px;">
                    <span> Raiser Name</span>
                    <br />
                    <input type="text"
                           id="txtRaiserName"
                           name="txtRaiserName"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
                <td colspan="2" style="padding:0px 10px">
                    <span> Employee/Supplier Name</span>
                    <br />
                    <input type="text"
                           id="txtEReceiptName"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
            </tr>
            <tr>
                <td style="width:33%; padding:0px 10px">
                    <span> Pay Mode</span>
                    <br />
                    <input type="text"
                           id="ddlEReceiptMode"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
                <td style="width:33%; padding:0px 10px">
                    <span> Amount</span>
                    <br />
                    <input type="text"
                           id="txtEAmount"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
                <td style="width:33%; padding:0px 10px">
                    <span> Pay Ref.No</span>
                    <br />
                    <input type="text"
                           id="txtEPayRefNo" disabled="disabled"
                           class="fstextbox" />
                </td>
            </tr>
            <tr>
                <td style="width:33%; padding:0px 10px">
                    <span> Tran Date</span>
                    <br />
                    <input type="text"
                           id="txtETranDate"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
                <td colspan="2" style="width:66%; padding:0px 10px">
                    <span> Bank Name</span>
                    <br />
                    <input type="text"
                           id="ddlEBankName"
                           disabled="disabled"
                           class="fstextbox" />
                </td>
            </tr>
            <tr></tr>
            <tr>
                <td colspan="3" style="width:99%; padding:0px 10px">
                    <span> Maker Remarks</span>
                    <br />
                    <textarea id="txtERemarks" rows="3" class="txtboxStyleBig" disabled="disabled" style="width:100%; border-radius:4px;"></textarea>
                    <br />
                </td>
            </tr>
            <tr>
                <td colspan="3" style="width:100%; padding:10px 10px">
                    <span style="color: rgb(29, 76, 209); font-weight: bold; font-size: 14px;"> GL Uploads</span>
                </td>
            </tr>
        </table>
        <div class="table-responsive" style="max-height: 200px; overflow: auto; height:100%;">
            <table class="tableSmall table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:5%;">
                            SlNo
                        </th>
                        <th style="width:10%;">
                            Credit From
                        </th>
                        <th style="width:15%;">
                            Document No
                        </th>
                        <th style="width:15%;">
                            GL A/C
                        </th>
                        <th style="width:38%;">
                            Description
                        </th>
                        <th style="width:10%;">
                            Amount
                        </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: ReceiptEntryDetailArray">
                    <tr>
                        <td align="center">
                            <span data-bind="text: $index()+1"></span>
                        </td>
                        <td>
                            <span data-bind="text: CRFrom"></span>
                        </td>
                        <td>
                            <span data-bind="text: docNo"></span>
                        </td>
                        <td>
                            <span data-bind="text: GLNo"></span>
                        </td>
                        <td>
                            <span data-bind="text: Desc"></span>
                        </td>
                        <td align="right">
                            <span data-bind="text: $root.formatNumber(GLamount)"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br />
        <table class="myTableStyleTabNew" style="width:100%;">
            <tr>
                <td colspan="3" style="width:99%; padding:0px 10px">
                    <span> Checker Remarks</span>
                    <br />
                    <textarea id="txtCheckerRemarks" rows="3" class="txtboxStyleBig required" style="width:100%; border-radius:4px;"></textarea>
                    <br />
                </td>
            </tr>
            <tr>
                <td style="width:100%; padding:0px 10px">
                    <button class="btn btn-success" id="btnApprove" data-bind="click: $root.Approve" style="margin-top:10px;  color:white;">
                        <span style="color:white; font-size:12px;" class="glyphicon glyphicon-ok"></span>
                        Approve
                    </button>
                    <button class="btn btn-danger" id="btnReject" data-bind="click: $root.Reject" style="margin-top:10px;  color:white;">
                        <span style="color:white; font-size:12px;" class="glyphicon glyphicon-remove"></span>
                        Reject
                    </button>
                </td>
            </tr>
        </table>
    </div>
<script>
    var UrlDet = "@Url.Action("GetReceiptChecker", "Receipt")"
    var UrlHelper = "@Url.Action("GetAutoCompleteCourier", "Helper")"
</script>
    <script src="@Url.Content("~/Areas/FLEXISPEND/FS_UserScript/jsReceiptAuthorization.js")" type="text/javascript"></script>
