@model IEM.Areas.ASMS.Models.PaymentDetails
@{
    if (Session["PageMode"] != null)
    {
        ViewBag.PageMode = (string)Session["PageMode"];
        if (ViewBag.PageMode == "3")
        {
            ViewBag.IsAllowApproverToEdit = (string)Session["IsAllowApproverToEdit"];
            if (ViewBag.IsAllowApproverToEdit == "1")
            {
                ViewBag.PageMode = "2";
            }
        }
    }
}
<script type="text/javascript">
    var curpagemode;
    $(document).ready(function () {
        curpagemode = '@ViewBag.PageMode';
        if (curpagemode == "3" || curpagemode == "5") {
            $("#payment").css("display", "none");

        }
    });

    $("#btnNextPayment").live("click", function () {
        $("#tabs").tabs({ disabled: [10] });
        $('#tabs').tabs('select', 4);
    });

    $("#btnPrevPayment").live("click", function () {
        $("#tabs").tabs({ disabled: [10] });
        $('#tabs').tabs('select', 2);
    });
</script>
<div>
    <div id="divPaymentDetails"> 
        <fieldset>
            <legend>PAYMENT DETAILS</legend>
            
                <div id="payment">
                    @*@Html.Partial("SupPaymentDetailsFields")*@
                </div>
                <div>
                    @Html.Partial("SupPaymentDetails")
                </div>
            
        </fieldset>
    </div>
    <div style="text-align:right;padding-right:25px;" class="divforbutton">
        <button id="btnPrevPayment" class="btn btn-primary"><span style="color:white;" class="glyphicon glyphicon-backward"></span> Prev</button>
        <button id="btnNextPayment" class="btn btn-primary">Next <span style="color:white;" class="glyphicon glyphicon-forward"></span></button>
    </div>
</div>