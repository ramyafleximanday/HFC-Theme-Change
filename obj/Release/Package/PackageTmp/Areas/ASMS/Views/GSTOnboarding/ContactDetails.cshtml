}
    
<script type="text/javascript">
    var curpagemode;
    $(document).ready(function () {
        curpagemode = '@ViewBag.PageMode';
        if (curpagemode == "3" || curpagemode == "5" || curpagemode == "12") {
            $("#c").css("display", "none");
            $("#cp").css("display", "none");
        }         
    });
    $("#btnNextContact").live("click", function () {
        $("#tabs").tabs({ disabled: [10] });
        $('#tabs').tabs('select', 3);
});
$("#btnPrevContact").live("click", function () {
    $("#tabs").tabs({ disabled: [10] });
    $('#tabs').tabs('select', 1);
});
</script>
<div>
    <div id="topFields">
        <div>
            <fieldset>
                <legend>ADDRESS</legend>
                <center>
                    <div id="c">
                        @Html.Partial("ContactDetailsFields")
                    </div>
                </center>
            </fieldset>
        </div>
        <div>
            @Html.Partial("ContactDetailsIndex")
        </div>
    </div>
    <br />
    <div id="bootomFields">
        <div>
            <fieldset>
                <legend>CONTACT PERSON DETAILS</legend>
                <center>
                    <div id="cp">
                        @Html.Partial("ContactPersonDetailsFields")
                    </div>
                </center>
            </fieldset>
        </div>
        <div>
            @Html.Partial("ContactPersonDetailsIndex")
        </div>
    </div>
    <br />
    <div style="text-align:right;" class="divforbutton">
        <button id="btnPrevContact" class="btn btn-primary" ><span style="color:white;" class="glyphicon glyphicon-backward"></span> Prev</button>
        <button id="btnNextContact" class="btn btn-primary" >Next <span style="color:white;" class="glyphicon glyphicon-forward"></span></button>
    </div>
</div>


