            else
            {
                <div class="gridCount">
                    Page <b>@(grid.PageIndex + 1)</b> of <b>@grid.PageCount</b>
                    Total Records : <label id="lblDirectorCount">@grid.TotalRowCount</label>
                </div>
            }*@

    </div>
}
