@model IEM.Areas.MASTERS.Models.iem_mst_region

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table class="myTableStyle">
        <tr>
            <td colspan="2" style="display:none;">
                <input name="CategoryID" id="_Regiongid" type="text" placeholder="Courier GID" data-val="true" value="@Model.region_gid" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                Are you sure want to delete this Category?
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                <input type="button" class="btn btn-danger" value="YES" onclick="DeleteConfirm()" />
                <input type="button" class="btn btn-primary" value="NO" onclick="GotoIndex()" />
            </td>
        </tr>
    </table>
}
<script type="text/javascript">
    function DeleteConfirm() {
        var Region_gid = $("#_Regiongid").val();       
        var classificationModel = { "region_gid": Region_gid };
        alert(classificationModel);
        $.post('../IEM_REGION/DeleteRegion', classificationModel,
        function (data) {
            if (data == 0) {
                location = location.href;
                alert(location);
            }

            else { location = '../IEM_REGION/Index'; }
        }, 'json');
    }
    function GotoIndex() {
        window.parent.jQuery('#ForPartialView').dialog('close');
    }
</script>

