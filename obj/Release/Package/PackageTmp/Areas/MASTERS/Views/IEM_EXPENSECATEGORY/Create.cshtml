            ErrCount = 3;
        }


        //if ($('#chk_othertravel').is(":checked") == false && $('#chk_travel').is(":checked") == false && $('#chk_conveyance').is(":checked") == false && $('#chk_vendor').is(":checked") == false && $('#chk_nontrav').is(":checked") == false && $('#chk_dsa').is(":checked") == false) {
