        }
        function DownloadExcel() {
            var UrlDet = "@Url.Action("DownloadExcel", "IEM_TAX")"
            ko.utils.postJson(UrlDet + '?ViewType=26&FileName=Pincode&' + new Date().getTime());
        }


        function refresh() {
            location = '../GstPincode/Index';
        }
       
</script>
