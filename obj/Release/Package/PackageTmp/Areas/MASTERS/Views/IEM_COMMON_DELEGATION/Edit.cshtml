    function echeckdelmat() {

        if ($("#EDelmatgid").val() == 0) {
            CheckFieldsHeader();
            $("#EDelmatgid").removeClass('valid');
            $("#EDelmatgid").addClass('required');
            CheckFieldsHeader();
