@{
    ViewBag.Title = "ECFMyRequestapp";
}
<div>
    <fieldset>
        <legend><b><span style="color: rgb(52, 108, 196);"></span></b></legend>
        <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;">
            <thead style="width:100%;">
                <tr>
                    <th class="thfix" style="display:none;">
                        REL Gid
                    </th>
                    <th class="thfix" style="width:5%;">
                        S.No
                    </th>
                    <th class="thfix" style="width:14.95%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyapp = '_asset_id'; sortReversemyapp = !sortReversemyapp">
                            Asset ID
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_asset_id' && !sortReversemyapp" class="fa fa-fw fa-sort-down"></span>
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_asset_id' && sortReversemyapp" class="fa fa-fw fa-sort-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchmyapp._asset_id">
                    </th>
                    <th class="thfix" style="width:21.2%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyapp = '_group_id'; sortReversemyapp = !sortReversemyapp">
                            Category
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_group_id' && !sortReversemyapp" class="fa fa-fw fa-sort-down"></span>
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_group_id' && sortReversemyapp" class="fa fa-fw fa-sort-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchmyapp._group_id">
                    </th>
                    <th class="thfix" style="width:12.05%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyapp = '_asset_code'; sortReversemyapp = !sortReversemyapp">
                            Sub-Category Code
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_asset_code' && !sortReversemyapp" class="fa fa-fw fa-sort-down"></span>
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_asset_code' && sortReversemyapp" class="fa fa-fw fa-sort-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchmyapp._asset_code">
                    </th>
                    <th class="thfix" style="width:24.1%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyapp = '_AssetDesp'; sortReversemyapp = !sortReversemyapp">
                            Sub-Category Name
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_AssetDesp' && !sortReversemyapp" class="fa fa-fw fa-sort-down"></span>
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_AssetDesp' && sortReversemyapp" class="fa fa-fw fa-sort-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchmyapp._AssetDesp">
                    </th>
                    <th class="thfix">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypemyapp = '_branch'; sortReversemyapp = !sortReversemyapp">
                            Branch
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_branch' && !sortReversemyapp" class="fa fa-fw fa-sort-down"></span>
                            <span style="font-size: 12px;" ng-show="sortTypemyapp == '_branch' && sortReversemyapp" class="fa fa-fw fa-sort-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchmyapp._branch">
                    </th>
                    <th class="thfix" style="width:11.35%;">Action</th>
                </tr>
            </thead>
        </table>
        <div ng-controller="DepreciationController">
            <div style="height: 450px;overflow-y: scroll;">
                <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;table-layout: fixed;">
                    <tbody ng-show="DepReleasesa.length!=0" ng-repeat="DepRelease in filtered = DepReleasesa  | orderBy:sortTypemyapp:sortReversemyapp | filter:searchmyapp | startFrom:(currentPagemyapp-1)*entryLimitmyapp | limitTo:entryLimitmyapp" style="width:100%;">
                        <tr>
                            <td class="tdfix" style="display:none;">
                                {{DepRelease._gid}}
                            </td>
                            <td class="tdfix" style=" width:4%;" align="center">
                                {{$index+1}}
                            </td>
                            <td class="tdfix" style=" width:12%;overflow: hidden;">
                                <span> {{DepRelease._asset_id}}</span>
                            </td>
                            <td class="tdfix" style=" width:17%;overflow: hidden;">
                                <span> {{DepRelease._group_id}}</span>
                            </td>
                            <td class="tdfix" style=" width:9.6%;overflow: hidden;">
                                <span> {{DepRelease._asset_code}}</span>
                            </td>
                            <td class="tdfix" style=" width:19.4%;overflow: hidden;">
                                <span> {{DepRelease._AssetDesp}}</span>
                            </td>
                            <td class="tdfix" style=" width:9%;overflow: hidden;">
                                <span>{{DepRelease._branch}}</span>
                            </td>
                            <td class="tdfix" style="width:8%;" align="center">
                                <a id="idselect" onclick="Releasethings(this)" title="Release the asset for Depreciation">
                                    <span class="glyphicon glyphicon-ok-sign"></span>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot ng-show="DepReleasesa.length==0">
                        <tr>
                            <td></td>
                            <td>No Records Found</td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div align="right" ng-show="DepReleasesa.length!=0">
                <pagination total-items="totalItemsmyapp"
                            ng-model="currentPagemyapp"
                            page="currentPagemyapp"
                            max-size="noofsetpagesmyapp"
                            boundary-links="true"
                            items-per-page="entryLimitmyapp" class="pagination-sm" style="cursor:pointer;">
                </pagination>
            </div>
        </div>
    </fieldset>
</div>


