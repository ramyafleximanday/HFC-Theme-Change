                    <span class="editsmv">
                        <label style="word-wrap: break-word;font-size:small; width:150px; font-weight:normal" id="lblsnonew2">@item.finyear</label>
                    </span>
                </text>),
                 grid.Column("raiser", "Raiser", style: "col-lg-3 MidColumn20Center", format: @<text>
