                        <label style="word-wrap: break-word;font-size:small;font-weight:normal" id="lblsnonew2">@item.assetdetDetid</label>
                    </span>
                            </text>),
                            grid.Column("assetreducedamt", "Reduced Amount", style: "col-lg-3 MidColumn20", format: @<text>
