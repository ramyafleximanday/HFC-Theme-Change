@{
    ViewBag.Title = "AssetMergeSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CmnFunctions obj = new CmnFunctions();
    var grid = new WebGrid(
                       source: Model.AssetParentSummary,
                         canPage: true,
                         rowsPerPage: 7,
                         canSort: true,
                         ajaxUpdateContainerId: "grid"
                       );
    int id = @grid.PageIndex;

    int rowVal = 0;

}


