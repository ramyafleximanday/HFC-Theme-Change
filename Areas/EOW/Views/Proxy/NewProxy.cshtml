            </td>
            <td >
                <span>Date To</span>
                <br />

                <input type="text"
                       name="DateTo"
                       id="DateTo"
                       value="@ViewBag.DateTo"
                       class="textboxStyle required"
                       @*onchange="checkdateto()"*@
                       maxlength="16" />
            </td>
        <tr>
            <td colspan="3">
                <span>Remark</span>
                <br />
                <input name="Remark"
