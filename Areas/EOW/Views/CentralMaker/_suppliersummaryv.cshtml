            }
        });
    });
    $(document).ready(function () {
        $("#txtsermonth").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd-mm-yy',
            maxDate: '-id',
            onSelect: function (selected) {
                $("#txtsermonth").addClass('valid');
            }
        });
    });
    $(document).ready(function () {
        $("#txtrelasedate").datepicker({
