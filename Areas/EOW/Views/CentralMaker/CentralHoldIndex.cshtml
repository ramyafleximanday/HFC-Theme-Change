<script>
    $("#txtAmountINV").keyup(function (event) {
        if (event.which >= 37 && event.which <= 40) {
            event.preventDefault();
        }

        var currentval = $("#txtAmountINV").val();
        var testDecimal = testDecimals(currentval);
        if (testDecimal.length > 1) {
            currentval = currentval.slice(0, -1);
        }
        $("#txtAmountINV").val(replaceCommas(currentval));

    });

    function testDecimals(currentval) {
        var count;
        currentval.match(/\./g) === null ? count = 0 : count = currentval.match(/\./g);
        return count;
    }
    function replaceCommas(yourNumber) {
        var components = yourNumber.toString().split(".");
        if (components.length === 1)
            components[0] = yourNumber;
        components[0] = components[0].replace(/\D/g, "").replace(/(\d)(?=(\d\d)+\d$)/g, "$1,");
        if (components.length === 2)
            components[1] = components[1].replace(/\D/g, "");
        return components.join(".");
    }
    $(document).ready(function () {
        $('#selectAll').on('click', function () {
            if ($(this).is(':checked')) {
                $('.case').each(function () {
                    this.checked = true;
                });
            } else {
                $('.case').each(function () {
                    this.checked = false;
                });
            }
        })
    });
    var app = angular.module('myApp', ['ui.bootstrap']);
    app.filter('startFrom', function () {
        return function (input, start) {
            if (input) {
                start = +start;
                return input.slice(start);
            }
            return [];
        };
    });

    app.controller('PageCtrl', ['$scope', '$http', 'filterFilter', function ($scope, $http, filterFilter) {
        $http.get("../CentralMaker/ToGetholdrelserpt?" + new Date().getTime())
     .then(function (response) {
         $scope.items = response.data.qrylist;
         $scope.search = {};
         $scope.resetFilters = function () {
             $scope.search = {};
         };
         $scope.currentPage = 1;
         $scope.totalItems = $scope.items.length;
         $scope.entryLimit = 50;
         $scope.noOfPages = Math.ceil($scope.totalItems / $scope.entryLimit);
         $scope.noofsetpages = 5;
         $scope.$watch('search', function (newVal, oldVal) {
             $scope.filtered = filterFilter($scope.items, newVal);
             $scope.totalItems = $scope.filtered.length;
             $scope.noOfPages = Math.ceil($scope.totalItems / $scope.entryLimit);
             $scope.currentPage = 1;
             $scope.noofsetpages = 5;
         }, true);
     });
    }]);

    function Saveecflogviews() {
        window.parent.jQuery('#ForPartialViewcentral').dialog('close');
    }

    var objDialogyCentralMaker;
    var objDialogyCentralHoldRelease;
    $(document).ready(function () {
        objDialogyCentralMaker = $("[id$='ForPartialViewcentralMaker']");
        objDialogyCentralMaker.dialog({
            autoOpen: false,
            modal: true,
            show: 'fade-in',
            close: 'fade-out',
            width: 500,
            height: 500
        });

        objDialogyCentralHoldRelease = $("[id$='ForPartialViewcentralHoldRelease']");
        objDialogyCentralHoldRelease.dialog({
            autoOpen: false,
            modal: true,
            show: 'fade-in',
            close: 'fade-out',
            width: 500,
            height: 245
        });
    });

    function inwardViewHold(element) {
        var row = $(element).closest('tr');
        var ecfnum = row.find('td:eq(0)').text();
        ecfnum = ecfnum.toString().trim();

        var url = '@Url.Action("CentralInwardView", "CentralMaker")?id=' + ecfnum + '&' + new Date().getTime();
        objDialogyCentralMaker.load(url);
        objDialogyCentralMaker.dialog({ title: 'View', width: '1135', height: '276' });
        objDialogyCentralMaker.dialog("open");
    }

    function HoldViewDetails(element) {
        var row = $(element).closest('tr');
        var ecfnum = row.find('td:eq(0)').text();
        ecfnum = ecfnum.toString().trim();

        var url = '@Url.Action("CentralHoldView", "CentralMaker")?id=' + ecfnum + '&' + new Date().getTime();
        objDialogyCentralHoldRelease.load(url);
        objDialogyCentralHoldRelease.dialog({ title: 'Log', width: '660', height: '400' });
        objDialogyCentralHoldRelease.dialog("open");

    }
    function ReleaseHold() {
        CheckListVal = [];
        $('input:checkbox:checked').each(function () {
            CheckListVal.push($(this).attr('value'));
        });
        if (CheckListVal == null || CheckListVal == "") {
            jAlert("No More Entry Selected", "Information");
            return false;
        }
        var url = '@Url.Action("HoldReleaseView", "CentralMaker")?SelectedValues=' + CheckListVal + '&' + new Date().getTime();
        objDialogyCentralHoldRelease.load(url);
        objDialogyCentralHoldRelease.dialog({ title: 'Hold Inward' });
        objDialogyCentralHoldRelease.dialog("open");
    }
    function ReleaseReturn() {
        CheckListVal = [];
        $('input:checkbox:checked').each(function () {
            CheckListVal.push($(this).attr('value'));
        });
        if (CheckListVal == null || CheckListVal == "") {
            jAlert("No More Entry Selected", "Information");
            return false;
        }
        var url = '@Url.Action("ReturnBackView", "CentralMaker")?SelectedValues=' + CheckListVal + '&' + new Date().getTime();
        objDialogyCentralHoldRelease.load(url);
        objDialogyCentralHoldRelease.dialog({ title: 'Return Inward' });
        objDialogyCentralHoldRelease.dialog("open");
    }

</script>
