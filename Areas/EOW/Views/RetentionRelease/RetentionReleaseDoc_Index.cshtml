<script type="text/javascript">
   

    $(document).ready(function () {
        $("#BackTab").hide();
        $("#NextTab").show();

        $("#txtreleasedate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd-mm-yy',
            maxDate: '-id',
            minDate: '+id',
        });
        $('#debitaduse').hide();
        $('#creditaduse').hide();
        $('#attachaduse').hide();

        $('#txtreleaseamount').attr('disabled', false);
        $('#txtreleasebalance').attr('disabled', false);
        $('#txtreleaseRemarkId').attr('disabled', false);
        // $('#btnsave').attr('disabled', true);
    });
    var currentTab = 0;
    $(function () {

        $("#tabs").tabs({
            select: function (e, i) {
                currentTab = i.index;
                var c = $('#tabs').tabs("length");
                if (currentTab == (c - 1)) {
                    $("#NextTab").hide();
                    $("#BackTab").show();
                } else {
                    $("#NextTab").show();
                    $("#BackTab").hide();
                }
            }
        });
    });
    $("#NextTab").live("click", function () {
        var tabs = $('#tabs').tabs();
        var c = $('#tabs').tabs("length");
        currentTab = currentTab == (c - 1) ? currentTab : (currentTab + 1);
        tabs.tabs('select', currentTab);
        $("#BackTab").show();
        if (currentTab == (c - 1)) {
            $("#NextTab").hide();
        } else {
            $("#NextTab").show();
        }
    });
    $("#BackTab").live("click", function () {
        var tabs = $('#tabs').tabs();
        var c = $('#tabs').tabs("length");
        currentTab = currentTab == 0 ? currentTab : (currentTab - 1);
        tabs.tabs('select', currentTab);
        if (currentTab == 0) {
            $("#NextTab").show();
            $("#BackTab").hide();
        }
        if (currentTab < (c - 1)) {
            $("#NextTab").show();
        }
    });
