}
<div class="well">
    <div class="row"> 
            <table id="tCygnetEdit" class="myTableStyleTabNew tblstyles" align="center">
                <tr>
                    <td>
                        <span style="margin:0px 0px 0px 14px;">Invoice No </span>
                        <input name="txtCygInvoiceNo"
                               id="txtCygInvoiceNo"
                               type="text"
                               class="textboxStyle required"
                               data-val="true"
                               value="@ViewBag.filter"
                               style="margin:9px 0px 0px 14px;width:181px;" /> 
                    </td>
                    <td>
                        <span style="margin:0px 0px 0px 14px;"> Invoice Type</span>
                        <br />
                        <select class="textboxStyle required" id="ddlCygClaimType">
                            <option value="0">---Select---</option>
                            <option value="P">PO</option>
                            <option value="W">WO</option>
                            <option value="N">Non PO/WO</option>
                            <option value="U">Utility</option>
                        </select>
                    </td>
                    <td>
                        <span style="margin:0px 0px 0px 14px;">PO/WO No</span>
                        <br />
                        <input type="text"
                               id="txtCygponumber"
                               name="txtCygponumber"
                               class="textboxStyle required"
                               maxlength="32"
                               value="@ViewBag.filter"
                                 />
                    </td>
                    <td>
                        <a title="Search"><span class="glyphicon glyphicon-search" style="margin:27px 0px 0px 0px;" id="posearchicon" onclick="PoSearch()"></span></a>
                    </td>
                </tr>
            </table>
</div>
</div>
<div id="searchgrid">
    @using (Html.BeginForm())
    {
        <div class="well">
            <div class="row">
                <table class="myTableStyleTabNew tblstyles" align="center">
                    <tr>
                        <td>
