<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/asms/ui-bootstrap-tpls-0.11.0.js"></script>
<div class="pageHeadingLayout">
    <span class="pageHeading">My Approved List Details Report</span>
