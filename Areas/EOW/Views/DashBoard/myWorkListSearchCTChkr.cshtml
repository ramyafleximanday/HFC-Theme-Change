@{
    ViewBag.Title = "ECFMyRequestctchkr";
}
<script>
    $(document).ready(function () {
        $("#idecfdatemkr").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd-mm-yy',
            maxDate: '-id',
        });
    });
</script>
<div>
    <div ng-controller="PageCtrl">
        <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;font-family:Tahoma;">
            <thead style="width:100%;">
                <tr>
                    <th class="thfix" style="display:none;">
                        ecf Gid
                    </th>
                    <th class="thfix" style="width:4%;">
                        S.No
                    </th>
                    <th class="thfix" style="width:11%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypectchkr = 'Docno'; sortReversectchkr = !sortReversectchkr">
                            ECF No
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'Docno' && !sortReversectchkr" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'Docno' && sortReversectchkr" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchCentralchkr.Docno">
                    </th>
                    <th class="thfix" style="width:9.5%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypectchkr = 'DocDate'; sortReversectchkr = !sortReversectchkr">
                            ECF Date
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'DocDate' && !sortReversectchkr" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'DocDate' && sortReversectchkr" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input id="idecfdatemkr" type="text" class="textboxStyle" ng-model="searchCentralchkr.DocDate">
                    </th>
                    <th class="thfix" style="width:10%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypectchkr = 'Docamount'; sortReversectchkr = !sortReversectchkr">
                            ECF Amount
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'Docamount' && !sortReversectchkr" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'Docamount' && sortReversectchkr" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" id="txtAmountc" class="textboxStyle" ng-model="searchCentralchkr.Docamount">
                    </th>
                    <th class="thfix" style="width:35%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypectchkr = 'SupplierName'; sortReversectchkr = !sortReversectchkr">
                            Supplier Name
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'SupplierName' && !sortReversectchkr" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'SupplierName' && sortReversectchkr" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchCentralchkr.SupplierName">
                    </th>
                    <th class="thfix" style="width:15%;">
                        <a style="text-decoration: none;" href="#" ng-click="sortTypectchkr = 'emporsupp'; sortReversectchkr = !sortReversectchkr">
                            Raiser Name
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'emporsupp' && !sortReversectchkr" class="glyphicon glyphicon-chevron-down"></span>
                            <span style="font-size: 12px;color:white;" ng-show="sortTypectchkr == 'emporsupp' && sortReversectchkr" class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <br />
                        <input type="text" class="textboxStyle" ng-model="searchCentralchkr.emporsupp">
                    </th>
                    <th class="thfix" style="width:11.2%;">Action</th>
                </tr>
            </thead>
        </table>
        <div style="height: 550px;overflow-y: scroll;">
            <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;table-layout: fixed;font-family:Tahoma;">
                <tbody ng-show="filtered3.length!=0" ng-repeat="item in filtered3 = itemsCentralchkr| orderBy:sortTypectchkr:sortReversectchkr | filter:searchCentralchkr | startFrom:(currentPage3-1)*entryLimit3 | limitTo:entryLimit3" style="width:100%;">
                    <tr>
                        <td class="tdfix" style="display:none;">
                            {{item.Docnogid}}
                        </td>
                        <td class="tdfix" style=" width:4%;" align="center">
                            {{$index+1}}
                        </td>
                        <td title="{{item.Docno}}" class="tdfix" style=" width:11.38%;overflow: hidden;">
                            <a id="idselect" onclick="Selectctchkr(this)" title="Select">
                                <span> {{item.Docno}}</span>
                            </a>
                        </td>
                        <td title="{{item.DocDate}}" class="tdfix" style=" width:9.56%;overflow: hidden;">
                            <a id="idselect" onclick="Selectctchkr(this)" title="Select">
                                <span> {{item.DocDate}}</span>
                            </a>
                        </td>
                        <td title="{{item.Docamount}}" class="tdfix" style=" width:10.5%;overflow: hidden;">
                            <a id="idselect" onclick="Selectctchkr(this)" title="Select">
                                <span> {{item.Docamount}}</span>
                            </a>
                        </td>
                        <td title="{{item.SupplierName}}" class="tdfix" style=" width:36%;overflow: hidden;">
                            <span> {{item.SupplierName}}</span>
                        </td>
                        <td title="{{item.emporsupp}}" class="tdfix" style=" width:15.3%;overflow: hidden;">
                            <span> {{item.emporsupp}}</span>
                        </td>
                        <td class="tdfix" style="width:10%;" align="center">
                            <a id="idselect" onclick="Selectctchkr(this)" title="Select">
                                <span class="glyphicon glyphicon-new-window"></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
                <tfoot ng-show="filtered3.length==0">
                    <tr>
                        <td colspan="8" style="text-align:left;"><div class="gridMessage" style="width:100%; border:none;"><center>No Records Found</center></div></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div ng-show="filtered3.length>0">
            <table style="width:100%;">
                <tr>
                    <td style="padding-left:10px" align="left"> <div class="gridCount" style="text-align:left;font-size:14px;">Total Records : {{totalItems3}}  of {{filtered3.length}}</div></td>
                    <td align="right">
                        <pagination total-items="totalItems3"
                                    ng-model="currentPage3"
                                    page="currentPage3"
                                    max-size="noofsetpages3"
                                    boundary-links="true"
                                    items-per-page="entryLimit3" class="pagination-sm" style="cursor:pointer;font-size:14px;">
                        </pagination>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
