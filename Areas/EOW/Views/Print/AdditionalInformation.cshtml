@{
    ViewBag.Title = "ECFMyRequest";
}

<div>
    <div ng-controller="ecfController">
        <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="width:100%;table-layout: fixed;" border="1">
            <thead style="width:100%;">
                <tr>
                    <th>
                        <center>Vendor Code</center>
                    </th>
                    <th colspan="2">
                        <center>Vendor Name</center>
                    </th>
                    <th>
                        <center>CBF No</center>
                    </th>
                    <th>
                        <center>Po No</center>
                    </th>
                    <th>
                        <center>Invoice No</center>
                    </th>
                    <th>
                        <center>Invoice Date</center>
                    </th>
                </tr>
            </thead>
            <tbody ng-show="ecfdetailsa.length!=0" ng-repeat="ecfdetail in filtered = ecfdetailsa" style="width:100%;">
                <tr>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.supplierheader_suppliercode}}</span>
                    </td>
                    <td colspan="2" style="overflow: hidden;">
                        <span> {{ecfdetail.supplierheader_name}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.ecfarf_po_no}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.ecfarf_cbf_no}}</span>
                    </td>
                    <td style="overflow: hidden;" align="right">
                        <span>{{ecfdetail.ecf_date}}</span>
                    </td>
                    <td style="overflow: hidden;" align="right">
                        <span>{{ecfdetail.ecf_no}}</span>
                    </td>
                </tr>
            </tbody>
            <tfoot ng-show="ecfdetailsa.length==0">
                <tr>
                    <td align="center" colspan="7"> <center> No Records Found</center></td>
                </tr>
            </tfoot>
        </table>
        @*<table style="width:100%;table-layout: fixed;">
                <tr>
                    <td align="left"><b><font>Credit Total</font></b></td>
                    <td align="right"><b><font> {{ getTotalchkr() }}</font></b></td>
                </tr>
            </table>*@
    </div>
</div>


