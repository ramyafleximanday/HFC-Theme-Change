@{
    ViewBag.Title = "ECFMyRequest";
}

<div>
    <div ng-controller="ecfController">
        <table class="tableSmall table-bordered table-hover table-responsive tablefix" style="font-family:Tahoma;width:100%;table-layout: fixed;" border="1">
            <thead style="width:100%;">
                <tr>
                    <th align="center">
                        <center>  Vendor Code</center>
                    </th>
                    <th colspan="2" align="center">
                        <center>  Vendor Name</center>
                    </th>
                    <th align="center">
                        <center>  Invoice No.</center>
                    </th>
                    <th align="center">
                        <center> Invoice Date</center>
                    </th>
                    <th align="center">
                        <center>  Invoice Amount</center>
                    </th>
                </tr>
            </thead>
            <tbody ng-show="ecfdetails.length!=0" ng-repeat="ecfdetail in filtered = ecfdetails" style="width:100%;">
                <tr>
                    <td style="overflow: hidden;">
                        <span>{{ecfdetail.Provision}}</span>
                    </td>
                    <td colspan="2" style="overflow: hidden;">
                        <span> {{ecfdetail.Description}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.InvoiceNo}}</span>
                    </td>
                    <td style="overflow: hidden;">
                        <span> {{ecfdetail.InvoiceDate}}</span>
                    </td>
                    <td style="overflow: hidden;" align="right">
                        <span> {{ecfdetail.AmountINR}}</span>
                    </td>
                </tr>
            </tbody>
            <tfoot ng-show="ecfdetails.length==0">
                <tr>
                    <td align="center" colspan="6"><center>No Records Found</center></td>
                </tr>
            </tfoot>
        </table>
        <table style="width:100%;table-layout: fixed;">
            <tr>
                <td align="left"><b><font>Invoice Total</font></b></td>
                <td align="right"><b><font> {{ getTotal() }}</font></b></td>
            </tr>
        </table>
    </div>
</div>


