@{
    ViewBag.Title = "POAmentment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>



<div style="padding-top:10px;">

</div>
<span class="pageHeading">PO Amendment</span>
<div class="well" style="padding:10px;">

    <div style="min-height :500px;font-size:12px;">
        <div style="width:100%; margin-bottom:15px;">
            <span class="pageHeading" style="font-size:13px;">PO Amendment Selection</span>
            <table class="myTableStyleTab" style="width:100%; border-top: 1px solid #ccc;">
                <tr>
                    <td style="padding:10px 5px 10px 0px; width:20%;">
                        <span>PO No</span>
                        <br />
                        <input type="text" class="fstextbox" id="txtPONo" />
                    </td>
                    <td style="padding:10px 5px; width:20%;">
                        <span>PO Date</span>
                        <br />
                        <input type="text" class="fstextbox" id="txtPODate" />
                    </td>

                    <td style="padding:10px 5px; width:20%;">
                        <span>Vendor Name</span>
                        <br />
                        <input type="text" class="fstextbox" id="txtVendor" />
                        <input type="hidden" value="0" id="hfVendor" />
                    </td>

                    

                    <td style="padding:10px 0px 10px 5px; width:20%;">
                        <button data-bind="click: function() { $root.GetPOSearch(1);}" class="btn btn-primary" style="font-size:12px;" type="button" name="command" title="Search" value="SEARCH">
                            <span class="glyphicon glyphicon-search" style="color:white;"> </span>Search
                        </button>
                        <button data-bind="click: function() { $root.GetPOSearch(0);}" type="button" class="btn btn-primary" style="font-size:12px;" value="Cancel">
                            <span style="color:white;" class="glyphicon glyphicon-remove-sign"></span> Clear
                        </button>
                    </td>
                </tr>

            </table>
            <div class="table-responsive" style="max-height: 100%; overflow: auto; margin-bottom: 20px;">
                <table id="CBFHeaderGrid" class="tableSmall table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width:3%; min-width:30px;">
                                #
                            </th>
                            <th style="width:9%; min-width:120px;">
                                PO No
                            </th>
                            <th style="width:9%; min-width:100px;">
                                PO Date
                            </th>
                            <th style="width:10%; min-width:100px;">
                                PO End Date
                            </th>
                            <th style="width:12%; min-width:120px;">
                                Raised By
                            </th>
                            <th style="width:16%; min-width:150px;">
                                Vendor Name
                            </th>
                            <th style="width:10%; min-width:100px;">
                                Department
                            </th>
                            <th style="width:12%; min-width:120px;">
                                Project Owner
                            </th>
                            <th style="width:9%; min-width:100px;">
                                PO Amount
                            </th>
                            <th style="width:4%; min-width:80px;">
                               Version
                            </th>
                            <th style="width:6%; min-width:80px;">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: {data: POResultArray}">
                        <tr>
                            <td align="center">
                                <span data-bind="text: $index() + 1"></span>
                            </td>
                            <td>
                                <span data-bind="text: PONo"></span>
                            </td>
                            <td>
                                <span data-bind="text: PODate"></span>
                            </td>
                            <td>
                                <span data-bind="text: POEndDate"></span>
                            </td>
                            <td>
                                <span data-bind="text: RaisedBy"></span>
                            </td>
                            <td>
                                <span data-bind="text: Vendor"></span>
                            </td>
                            <td>
                                <span data-bind="text: Department"></span>
                            </td>
                            <td>
                                <span data-bind="text: ProjectOwner"></span>
                            </td>
                            <td align="right">
                                <span data-bind="text: POTotalAmount"></span>
                            </td>
                            <td align="center">
                                <span data-bind="text: Version"></span>
                            </td>
                            
                            <td align="center" class="viewStatus">
                                <a style="cursor:pointer; color: #116BAC;" data-bind="click: function() { $root.SetPOAmendment(POHeaderGId);}">Amendment</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>

<script>
    var UrlDet = "@Url.Action("CBFSelection", "PO")"
    var UrlHelper = "@Url.Action("GetProjectOwner", "FBHelper")"
    var UrlSuccess = "@Url.Action("RaisePO", "PO")"
    @*var UrlReturn = "@Url.Action("CbfSummaryIndex", "CbfSummary")"*@
    function CancelProcess()
    {
        location = "@Url.Action("index", "poheader")";
    }

</script>
<script src="@Url.Content("~/Areas/FLEXIBUY/FS_UserScript/jsPOAmentment.js")" type="text/javascript"></script>


