    var tr = $("#wodetailgrid").find('tr');
    // $("#podetailgrid td:nth-child(10),#podetailgrid th:nth-child(10)").hide();
    $("#wodetailgrid tr .Color").click(function () {
        $('#wodetailgrid').find('tr').css('background', 'none');
