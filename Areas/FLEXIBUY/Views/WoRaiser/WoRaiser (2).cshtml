        if (parseFloat(overTotal) == parseFloat(0) || parseFloat(overTotal) == "" || parseFloat(overTotal) == null) {
            jAlert("Total Amount Cannot be Empty or Zero", "Error");
            return false;
        }
        if (wodate == null || wodate == "") {

