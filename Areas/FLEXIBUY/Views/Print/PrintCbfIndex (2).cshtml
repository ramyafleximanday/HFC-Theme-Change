@model IEM.Areas.FLEXIBUY.Models.CbfPrintEntity
@{
    Layout = null;
    int rowcnt = 0;
    int rowcnt1 = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print CBF</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .headerfont {
            font-weight: bold;
            font-size: small;
        }

        .valuefont {
            font-weight: bold;
            font-size: small;
            color: navy;
        }
    </style>
    <script type="text/javascript">
        $("#btnPrint").live("click", function () {
            window.open("../Print/PrintPDFForCBF?" + new Date().getTime(), "_blank");
        });
    </script>

</head>
<body>
    <div id="dvContainer">
        @*<br />*@
        <div  style="background-color: #f5f5f5;border: 2px solid #808080;border-radius: 4px;padding: 19px;">
            <div style="width:100%;">
                <div style="width:70%;margin-left:10%;float:left;text-align:center;vertical-align:middle">
                    <b style="color:navy;font-size:12px">CAPITAL BUDGET FORM</b>
                </div>
                <div style="width:20%;float:right;vertical-align:middle;text-align:right;background:url('@Server.MapPath("~/Content/images/Fullerton.bmp")')">
                    @*<img src="@Server.MapPath("~/Content/images/Fullerton.bmp")" style="height:31px;" />*@
                </div>
            </div>
            @*<br />*@
            <div>
                <table class="myTableStyleTab" style="width:100%;">
                    <tr style="border:3px solid double">
                        <td style="width:50%;">
                            <table class="myTableStyleTabNew" style="width:100%;border:5px;">
                                <tr>
                                    <td>
                                        <b class="headerfont">CBF Number</b>
                                    </td>
                                    <td>
                                        <b class="valuefont" style="color:navy;">@Model.CBfNumber</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b class="headerfont">CBF Date</b>
                                    </td>
                                    <td>
                                        <b class="valuefont" style="color:navy;">@Model.CBfDate</b>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <b class="headerfont">Initiator</b>
                                    </td>
                                    <td>
                                        <b class="valuefont" style="color:navy;">@Model.RaiserName</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b class="headerfont">City/Class</b>
                                    </td>
                                    <td>
                                        <b class="valuefont" style="color:navy;">@Model.City / @Model.CityClass</b>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td style="width:50%;">
                            <table class="myTableStyleTabNew" style="width:100%;border:5px;">
                                <tr>
                                    <td style="width:30%;">
                                        <b class="headerfont">Branch Code</b>
                                    </td>
                                    <td style="width:70%;">
                                        <b class="valuefont" style="color:navy;">@Model.BranchCode</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">
                                        <b class="headerfont">Branch Name</b>
                                    </td>
                                    <td style="width:70%;">
                                        <b class="valuefont" style="color:navy;">@Model.BranchName</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">
                                        <b class="headerfont">Branch Type</b>
                                    </td>
                                    <td style="width:70%;">
                                        <b class="valuefont" style="color:navy;">@Model.BranchType</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">
                                        <b class="headerfont">Department</b>
                                    </td>
                                    <td style="width:70%; text-align:left;">
                                        <b class="valuefont" style="color:navy;">@Model.Department</b>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
            <div>
                @*<br />*@

                <div>
                    <table cellpadding="5" cellspacing="0" class="tableSmall table-bordered table-hover table-responsive">
                        <thead style="width:100%;background-color:#337ab7;color: #FFFFFF;font-weight:normal">
                            <tr>
                                <th style="width:3%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-left:0.1px solid navy;border-top:0.1px solid navy">
                                    S.No
                                </th>
                                <th style="width:9%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Product Code
                                </th>
                                <th style="width:20%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Product Name
                                </th>
                                <th style="width:22%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Description
                                </th>
                                <th style="width:8%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    UOM
                                </th>
                                <th style="width:4%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Oty
                                </th>
                                <th style="width:10%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Unit Amount
                                </th>
                                <th style="width:10%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    total Amount
                                </th>
                                <th style="width:4%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    FCCC
                                </th>
                                <th style="width:10%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Budget Line
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CBFDetailsList)
                            {
                                rowcnt = rowcnt + 1;
                                <tr>
                                    <td style="width:3%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-left:0.1px solid navy;" align="center">
                                        @rowcnt
                                    </td>
                                    <td style="width:9%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.ProductCode
                                    </td>
                                    <td style="width:20%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.ProductName
                                    </td>
                                    <td style="width:22%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.ProductDescription
                                    </td>
                                    <td style="width:8%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.UOM
                                    </td>
                                    <td style="width:4%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.Qty
                                    </td>
                                    <td style="width:10%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.UnitAmount
                                    </td>
                                    <td style="width:10%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.TotalAmount
                                    </td>
                                    <td style="width:4%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.FCCC
                                    </td>
                                    <td style="width:10%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.BudgetLine
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                @*<br />*@
                <div>
                    <table class="myTableStyleTabNew" style="width:100%;border:5px;">
                        <tr>
                            <td style="width:15%;">
                                <b class="headerfont">CBF Total Amount</b>
                            </td>
                            <td style="width:85%;" class="valuefont">
                                <b class="valuefont" style="color:navy;">@Model.CBFHeaderAmount</b>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:15%;">
                                <b class="headerfont">CBF Amount In Words</b>
                            </td>
                            <td style="width:85%;" class="valuefont">
                                <b class="valuefont" style="color:navy;">@Model.CBFHeaderAmountInWords</b>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:15%;">
                                <b class="headerfont">Deviation Amount</b>
                            </td>
                            <td style="width:85%;">
                                <b class="valuefont" style="color:navy;">@Model.CBFHeaderDevAmount</b>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:15%;">
                                <b class="headerfont">Justification</b>
                            </td>
                            <td style="width:85%;">
                                <b class="valuefont" style="color:navy;">@Model.Justification</b>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:15%;">
                                <b class="headerfont">Fincon budgeted</b>
                            </td>
                            <td style="width:85%;">
                                <b class="valuefont" style="color:navy;">@Model.BudgetedFlag</b>
                            </td>
                        </tr>
                    </table>
                </div>
                @*<br />*@
                <div>
                    <table cellpadding="5" cellspacing="0" class="tableSmall table-bordered table-hover table-responsive">
                        <thead style="width:100%;background-color:#337ab7;color: #FFFFFF;font-weight:normal">
                            <tr>
                                <th style="width:3%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-left:0.1px solid navy;border-top:0.1px solid navy">
                                    S.No
                                </th>
                                <th style="width:9%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Approver Name
                                </th>
                                <th style="width:20%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Approval Date
                                </th>
                                <th style="width:22%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Approval Stage
                                </th>
                                <th style="width:8%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-top:0.1px solid navy">
                                    Remarks
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ApprovalsList)
                            {
                                rowcnt1 = rowcnt1 + 1;
                                <tr>
                                    <td style="width:3%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;border-left:0.1px solid navy;" align="center">
                                        @rowcnt1
                                    </td>
                                    <td style="width:20%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.ApproverName
                                    </td>
                                    <td style="width:7%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;" align="center">
                                        @item.ApprovalDate
                                    </td>
                                    <td style="width:15%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.ApprovalStage
                                    </td>
                                    <td style="width:17%;border-bottom:0.1px solid navy;border-right:0.1px solid navy;">
                                        @item.Remarks
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>


    </div>

    <div id="divPrintButton">
        <input type="button" value="Print" id="btnPrint" />
    </div>
</body>

</html>
