                              return false;
                          });
                          return false;                     
                  }
                  else
                  {
                      hideProgress();
                      jAlert("Submitted Successfully", "Success", function () {
                          location = '@Url.Action("Index", "ParSummary")';
                      });
                     
                  }
              }, 'json');

    }
    function fucntionclose() {
        location = '../ParSummary/Index';
    }

   
