@{
    Session["da"] = null;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<b> <span style="color:rgb(52,108,196);"> PAR Raiser</span></b>

<div class="well">
    <div class="borderStyle panel panel-default" style="margin-bottom:15px;">
        <table class="myTableStyleTabNew" align="center" width="100%">
            <tr>
                <td style="padding:10px; width:20%;">

                    <span>PAR Number</span>
                    <br />
                    <input type="text"
                           name="txtparno"
                           class="textboxStyle"
                           disabled="disabled"
                           style="width:100%;"
                           id="txtpar_no" />
                </td>
                <td style="padding:10px; width:20%;">
                    <span>PAR Date</span>
                    <br />
                    <input type="text"
                           id="ParDate_id"
                           value="@DateTime.Now.ToString("dd-MM-yyyy")"
                           maxlength="10"
                           disabled="disabled"
                           style="width:100%;"
                           class="textboxStyle valid" />
                </td>
                <td style="padding:10px; width:20%;">
                    <span>PAR Amount</span>
                    <br />
                    <input type="text"
                           id="txtparamount_id"
                           disabled="disabled"
                           style="width:100%;"
                           class="textboxStyle required" />
                </td>
                <td style="padding:10px; width:20%;">
                    <span>Final Approval Date</span>
                    <br />
                    <input type="text"
                           id="txtfinalApprovaldate_id"
                           value=""
                           maxlength="10"
                           disabled="disabled"
                           style="width:100%;"
                           class="textboxStyle required" />
                </td>
                <td style="padding:10px; width:20%;">
                    <span>Period</span>
                    <br />
                    <input type="text"
                           id="period_id"
                           value=""
                           maxlength="9"
                           disabled="disabled"
                           style="width:100%;"
                           class="textboxStyle required" />
                </td>
            </tr>
            <tr>
                <td style="padding:10px;">
                    <span>Is Budgeted?</span>
                    <br />
                    <div style="margin-top:5px;">
                        <input type="radio" id="rdbBudgeted" name="Budgeted" value="Y" checked="checked" />
                        Yes
                        <input type="radio" id="rdbUnBudgeted" name="Budgeted" value="N" />
                        No
                    </div>
                </td>
                <td style="padding:10px;">
                    <span>Contigency %</span>
                    <br />
                    <input type="text"
                           id="txtContigency_id"
                           value=""
                           maxlength="2"
                           onkeypress="return isNumber1(event, this);"
                           class="textboxStyle"
                           style="width:100%;"
                           onchange="cancellation()" />
                </td>
                <td style="padding:10px;">
                    <span>Contigency Amount</span>
                    <br />
                    <input type="text"
                           id="txtContigencyamount_id"
                           value=""
                           maxlength="9"
                           class="textboxStyle "
                           style="width:100%;"
                           disabled="disabled"
                           readonly="readonly" />

                </td>
                
                <td style="padding:10px;" colspan="2">
                    <span>PAR Description</span>
                    <br />
                    <div>
                        <input type="text"
                               name="txt_Description"
                               class="textboxStyle"
                               maxlength="264"
                               style="display:block; width:100%;"
                               id="description" />
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div>
        @Html.Partial("ParDetailsForPar")
    </div>
    <div>
        @Html.Partial("EmployeeDetails")
    </div>
    <div id="forempsearch">
    </div>
    <div id="boqattachment"></div>

