            $("#period_id").addClass("valid");
        }
        else {
            $("#period_id").removeClass("valid");
            $("#period_id").addClass("required");
        }

    })
    $("#txtfinalApprovaldate_id").change(function () {
        var a = $("#txtfinalApprovaldate_id").val();
        if (a.trim() != "" || a != null) {
            $("#txtfinalApprovaldate_id").removeClass("required");
