@model IEM.Areas.MASTERS.Models.iem_mst_uom

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table class="myTableStyle">
        <tr>
            <td colspan="2" style="display:none;">
                <input name="CategoryID" id="_Uomid" type="text" placeholder="Category ID" data-val="true" value="@Model.uom_gid" />

            </td>
        </tr>
        <tr>
            <td>
                <span> Uom Code </span>
            </td>
        </tr>
        <tr>
            <td>
                <div id="txtCategoryName">
                    <input name="CategoryeName" class="textboxStyle required" maxlength="8" id="_Uomcode" type="text" data-val="true" value="@Model.uom_code" />

                </div>
            </td>
        </tr>
        <tr>
            <td>
                <span> Uom Name </span>
            </td>
        </tr>
        <tr>
            <td>
                <div id="txtCategoryName">
                    <input name="CategoryeName" class="textboxStyle required" id="_Uomname" type="text" maxlength="32"  data-val="true" value="@Model.uom_name" />
                </div>
            </td>
        </tr>

        <tr>
            <td colspan="2" align="right">
               
                <input type="button" class="btn btn-warning" value="Close" onclick="GotoIndex()" />
            </td>
        </tr>
    </table>

}
<script type="text/javascript">
    $(document).ready(function () {
        $('#_Uomname:input').attr('disabled', true);
        $('#_Uomcode:input').attr('disabled', true);
    });
</script>

<script type="text/javascript">
    function Update()
    {
        
    }
    function GotoIndex()
    {
        window.parent.jQuery('#ForPartialView').dialog('close');
    }
</script>
