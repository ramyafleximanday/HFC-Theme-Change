@model IEM.Areas.MASTERS.Models.iem_mst_courier

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table class="myTableStyle">
        <tr>
            <td colspan="2" style="display:none;">
                <input name="CategoryID" id="_Couriergid" type="text" placeholder="Courier GID" data-val="true" value="@Model.courier_gid" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                Are you sure want to delete this Category?
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                <input type="button" class="btn btn-danger" value="YES" onclick="DeleteConfirm()" />
                <input type="button" class="btn btn-primary" value="NO" onclick="GotoIndex()" />
            </td>
        </tr>
    </table>
}
<script type="text/javascript">
    function DeleteConfirm() {
        var courier_gid = $("#_Couriergid").val();
        alert(courier_gid);
        var classificationModel = { "courier_gid": courier_gid };
        alert(classificationModel);
        $.post('../IEM_COURIER/DeleteCourier', classificationModel,

        function (data) {
            if (data == 0) {
                location = location.href;
                alert(location);
            }

            else { location = '../IEM_COURIER/Index'; }
        }, 'json');
    }
    function GotoIndex() {
        window.parent.jQuery('#ForPartialView').dialog('close');
    }
</script>

