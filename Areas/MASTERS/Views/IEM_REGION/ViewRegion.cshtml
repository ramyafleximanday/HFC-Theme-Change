@model IEM.Areas.MASTERS.Models.iem_mst_region
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="myTableStyle">
        <tr>
            <td colspan="2" style="display:none;">
                <input name="CategoryID" id="_Regiongid" type="text" data-val="true" value="@Model.region_gid" />
            </td>
        </tr>
       
        <tr>
            <td>
                <span> Courier Name </span>
            </td>
        </tr>
        <tr>
            <td>
                <div id="txtCategoryName">
                    <input name="CategoryeName" id="_Regionname" class="textboxStyle required" type="text" maxlength="16" data-val="true" value="@Model.region_name">
                </div>
            </td>
        </tr>

        <tr>
            <td colspan="2" align="right">
                
                <input type="button" class="btn btn-warning" value="Close" onclick="GotoIndex()" />
            </td>
        </tr>
    </table>
    }
<script type="text/javascript">
    $(document).ready(function () {
        $('#_Regionname:input').attr('disabled', true);  
    });
</script>
<script type="text/javascript">
    function Update() {

        var regionname = $("#_Regionname").val();
        var regiongid = $("#_Regiongid").val();
        if (regionname == "")
        {
            alert("Invalid Region Name.");
            return false;
        }
        var CategoryModel = { "region_gid": regiongid, "region_name": regionname };

        $.post('../IEM_REGION/UpdateRegionDetails', CategoryModel,
        function (data) { if (data == 0) { location = location.href; } else { location = '../IEM_REGION/Index'; } }, 'json');
            }
    function GotoIndex() {
        window.parent.jQuery('#ForPartialView').dialog('close');
    }
</script>
