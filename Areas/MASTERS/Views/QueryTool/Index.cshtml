        }
        if (operator == "" || operator == "0" || operator == null) {
            alert('Select Operator Name');
            return;
        }

        if (operator != 'is null' && operator != 'is not null') {
            if (txtInput == "" || txtInput == "0" || txtInput == null) {
                alert('Input is Empty');
