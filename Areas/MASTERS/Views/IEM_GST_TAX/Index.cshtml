    var objDialog;
    var objdialogforedit;
    $(document).ready(function () {
        $(function () {
            $("#txtFilter").focus();
        });
        //$('#taxgstid tr th:nth-child(7)').addClass("nosort");
        $('#taxgstid').dataTable({
            "aoColumnDefs": [{
