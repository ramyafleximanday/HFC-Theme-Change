        }
    }


    $("#selectedStateID").change(function () {
        var StateID = $(this).val();
        $("#gststate").val('');
        var obj =
       {
           "Audit_stategid": StateID,
       };
        $.ajax({
            url: '@Url.Action("Getgstcode", "Adhocmaster")',
            data: JSON.stringify(obj),
