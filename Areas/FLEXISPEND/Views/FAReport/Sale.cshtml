@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<style>
    table, th, td {
        white-space: nowrap;
    }
</style>

<div class="pageHeadingLayout">
    <span class="pageHeading">Sale Report</span>
</div>
<div class="well">
    <table class="myTableStyleTabNew" style="width:100%;">
        <tr>
            <td style="width:25%; padding:0px 10px 0px 3px;">
                <span>Date From</span>
                <br />
                <input type="text"
                       id="txtDateFrom"
                       onkeypress="return isEvent(event)"
                       class="fstextbox" />
            </td>
            <td style="width:25%; padding:0px 10px;">
                <span>Date To</span>
                <br />
                <input type="text"
                       id="txtDateTo"
                       onkeypress="return isEvent(event)"
                       class="fstextbox" />
            </td>
            <td style="width:50%; padding:0px; vertical-align:bottom;">
                <button class="btn btn-primary" data-bind="click: $root.search" style="color:white;">
                    <span style="color:white; font-size:12px;" class="glyphicon glyphicon-search"></span>
                    Search
                </button>
                <button class="btn btn-primary" data-bind="click: $root.clearFilter" style="color:white;">
                    <span style="color:white; font-size:12px;" class="glyphicon glyphicon-refresh"></span>
                    Clear
                </button>
                <button class="btn btn-success" id="btnExporExcel" data-bind="click: $root.Download" style="color:white;">
                    <span style="color:white; font-size:12px;" class="glyphicon glyphicon-export"></span>
                    Export to Excel
                </button>
            </td>
        </tr>
    </table>

    @*SlNo
    SalesRefernceNo
    --AssetId
    AssetCode
    AssetDescription
    AssetValue
    Department
    Depreciation
    WdvValue
    DepreciationRedification
    ProfitLoss
    SaleDate
    SalesMonth
    Branchcode
    State
    VatValue
    salesvalue
    VatAmount
    SalesValue
    BuyerName
    InvoiceNo*@


    <div style="width:100%; overflow:auto; height:100%; margin-top: 15px;">
        <table class="tableSmall table-bordered table-hover table-responsive" id="gvReport" data-bind="visible: ResultArray().length > 0">
            <thead>
                <tr>
                    <th style="width:2%; min-width:40px; max-width:100%;">
                        SlNo
                    </th>
                    <th style="width:4%; min-width:120px; max-width:100%;">
                        Sale Refernce No
                    </th>
                    <th style="width:4%; min-width:120px; max-width:100%;">
                        Asset Id
                    </th>
                    <th style="width:5%; min-width:100px; max-width:100%;">
                        Asset Code
                    </th>
                    <th style="width:5%; min-width:180px; max-width:100%;" >
                        Asset Description
                    </th>
                    <th style="width:5%; min-width:100px; max-width:100%;">
                        Asset Value
                    </th>
                    <th style="width:5%; min-width:180px; max-width:100%;">
                        Dept(IT/PIP)
                    </th>
                    <th style="width:5%; min-width:100px; max-width:100%;">
                        Depreciation
                    </th>
                    <th style="width:5%; min-width:120px; max-width:100%;">
                        WDV
                    </th>
                    <th style="width:5%; min-width:120px; max-width:100%;">
                        Depreciation Redification
                    </th>
                    <th style="width:5%; min-width:120px; max-width:100%;">
                        Profit/Loss
                    </th>
                    <th style="width:5%; min-width:120px; max-width:100%;" class="colDate">
                        Sale Date
                    </th>
                    <th style="width:5%; min-width:100px; max-width:100%;">
                        Sale Month
                    </th>
                    <th style="width:4%; min-width:120px; max-width:100%;">
                        Branch Code
                    </th>
                    <th style="width:5%; min-width:150px; max-width:100%;">
                        State
                    </th>
                    <th style="width:5%; min-width:100px; max-width:100%;">
                        Vat Rate
                    </th>
                    <th style="width:5%; min-width:100px; max-width:100%;">
                        Total Sale Value
                    </th>
                    <th style="width:5%; min-width:100px; max-width:100%;">
                        VAT Amount
                    </th>
                    <th style="width:5%; min-width:120px; max-width:100%;">
                        Sale Value(Net off VAT)
                    </th>
                    <th style="width:7%; min-width:250px; max-width:100%;">
                        Buyer Name
                    </th>
                    <th style="width:4%; min-width:120px; max-width:100%;">
                        Invoice No
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach:{ data: ResultArray, afterRender: DatatableCall }, visible: ResultArray().length > 0">
                <tr>
                    <td align="center">
                        <span data-bind="text: SlNo"></span>
                    </td>
                    <td>
                        <span data-bind="text: SalesRefernceNo"></span>
                    </td>
                    <td>
                        <span data-bind="text: AssetId"></span>
                    </td>
                    <td>
                        <span data-bind="text: AssetCode"></span>
                    </td>
                    <td>
                        <span data-bind="text: AssetDescription"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: $root.formatNumber(AssetValue)"></span>
                    </td>
                    <td>
                        <span data-bind="text: Department"></span>
                    </td>
                    <td>
                        <span data-bind="text: Depreciation"></span>
                    </td>
                    <td>
                        <span data-bind="text: WdvValue"></span>
                    </td>
                    <td>
                        <span data-bind="text: DepreciationRedification"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: $root.formatNumber(ProfitLoss)"></span>
                    </td>
                    <td align="center">
                        <span data-bind="text: SaleDate"></span>
                    </td>
                    <td>
                        <span data-bind="text: SalesMonth"></span>
                    </td>
                    <td>
                        <span data-bind="text: Branchcode"></span>
                    </td>
                    <td>
                        <span data-bind="text: State"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: $root.formatNumber(VatValue)"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: $root.formatNumber(TotalSalesValue)"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: $root.formatNumber(VatAmount)"></span>
                    </td>
                    <td align="right">
                        <span data-bind="text: $root.formatNumber(SalesNetValue)"></span>
                    </td>
                    <td>
                        <span data-bind="text: BuyerName"></span>
                    </td>
                    <td>
                        <span data-bind="text: InvoiceNo"></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
<script>
    var UrlDet = "@Url.Action("FetchSalesReport", "FAReport")"
</script>
<script src="@Url.Content("~/Areas/FLEXISPEND/FS_UserScript/jsIFAMSSaleReport.js")" type="text/javascript"></script>
