@model IList<IEM.Areas.FLEXISPEND.Controllers.PaymentAdviceDetails>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Payment Advice</title>
    
</head>
<body>
    <div class="container" style="font-size:11px; !important; font-family: Verdana;">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="row" style="padding-top:17px;">
                    <div class="col-sm-12 col-md-12 col-xs-12">
                        <table width="95%" style="border:0px;">
                            <tbody>
                                <tr>
                                    <td style="width:50%; border:0px;vertical-align:top;" align="left">
                                         <span class="text1">@item.EmployeeSupplierName</span><br />
                                         <span class="text1">@item.BeneficiaryAddress</span>
                                        
                                    </td>
                                    <td colspan="2" style="width:50%; border:0px; vertical-align:top;" align="left">
                                        
                                        <span class="text1">@item.BranchAddress</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="line-height:20px; border:0px; width:50%;" align="left">&nbsp;</td>
                                    <td style="line-height:20px; border:0px; width:25%;" align="left">&nbsp;</td>
                                    <td style="line-height:20px; border:0px; width:25%;" align="left">&nbsp;</td>
                                </tr>
                                <tr>
                                    <td style="width:50%; border:0px;" align="left">
                                        <span class="text2">
                                            PAYMENT No. : @item.PaymentNo
                                        </span>
                                    </td>
                                    <td style="width:25%; border:0px;" align="left">
                                        <span class="text2">ECF Batch No: @item.ECFBatchNo</span>
                                    </td>
                                    <td style="width:25%; border:0px;" align="left">
                                        @if (item.EmpStatus == "" || item.EmpStatus == null)
                                        {

                                        }
                                        else { <span class="text2">Employee Status: @item.EmpStatus</span>}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                if (item.IsTransactionDetail != "1")
                {
                    <br />
                    <div class="row" style="padding-bottom:10px;">
                        <div class="col-sm-12 col-md-12 col-xs-12">
                            <span class="text3">
                                Please refer to the Agreement between @System.Configuration.ConfigurationManager.AppSettings["CompanyFullName"] (@System.Configuration.ConfigurationManager.AppSettings["CompanyName"])
                                and yourselves. With regard to the business sourced by you for @System.Configuration.ConfigurationManager.AppSettings["CompanyName"] during the month
                                of JANUARY a sum of Rs. @if (item.Total == "" || item.Total == null)
                                { <span style="padding-right:40px;">&nbsp;</span> }
                                else
                                { @item.Total <span style="padding-right:5px;">&nbsp;</span>}
                                /- is payable as fees / commission by @System.Configuration.ConfigurationManager.AppSettings["CompanyName"] in terms
                                of the above Agreement.
                            </span>
                        </div>
                    </div>
                    <br />
                    <div class="row" style="padding-bottom:10px;">
                        <div class="col-sm-12 col-md-12 col-xs-12">
                            <span class="text3">
                                Accordingly, please find enclosed, a Cheque/DD no. @if (item.ChequeNo == "" || item.ChequeNo == null)
                                { <span style="padding-right:40px;">&nbsp;</span> }
                                else
                                { @item.ChequeNo <span style="padding-right:15px;">&nbsp;</span>} dated  @if (item.ChequeDate == "" || item.ChequeDate == null)
                                { <span style="padding-right:40px;">&nbsp;</span> }
                                else
                                { @item.ChequeDate <span style="padding-right:15px;">&nbsp;</span>} for
                                Rs.@if (item.Amount == "" || item.Amount == null)
                                { <span style="padding-right:40px;">&nbsp;</span> }
                                else
                                { @item.Amount <span style="padding-right:5px;">&nbsp;</span>}/- drawn on HDFC EXPENSE  Bank, in favour of
                                @if (item.BeneficiaryName == "" || item.BeneficiaryName == null)
                                { <span style="padding-right:100px;">&nbsp;</span> }
                                else
                                { @item.BeneficiaryName <span style="padding-right:15px;">&nbsp;</span>} after deduction of TDS of Rs.@if (item.TDS == "" || item.TDS == null)
                                { <span style="padding-right:40px;">&nbsp;</span> }
                                else
                                { @item.TDS <span style="padding-right:5px;">&nbsp;</span>} /- as applicable.
                            </span>
                        </div>
                    </div>
                    <br />
                    <div style="width:100%;">
                            <p>
                                Please preserve this advice to verify with Form 16-A, which will be sent to you at
                                the end of Financial Year
                            </p>
                    </div>
                   <div style="width:100%;">
                            <p>
                                In case of any discrepancy you are requested to get back to your coordinator within
                                15 days of payout credit/cheque date else this would be treated as final payment for
                                the said month.
                            </p>
                    </div>
                }
                else
                {
                    
                    <div class="row" style="padding-bottom:10px;">
                        <div class="col-sm-12 col-md-12 col-xs-12">
                            <span class="text3">
                                THE ENCLOSED CHEQUE/DD IS IN SETTLEMENT OF YOUR MENTIONED BILLS/DUES AND IS INCLUSIVE OF
                                ALL TAXES APPLICABLE THEREON.
                            </span>
                        </div>
                    </div>
                    <div  border='0' style="padding-bottom:10px; margin-top:5px; width:100%;">
                            <table width="100%;" style="border:none; " cellspacing='0'>
                                <thead>
                                    <tr>
                                        <th style="width:25%; min-width:110px; max-width:120px; white-space: nowrap; text-align:center; border:none; border-bottom:1px solid #000; border-top:1px solid #000; font-weight:normal;  padding-bottom:9px;">BILL No</th>
                                        <th style="width:15%; min-width:80px; text-align:center; white-space: nowrap; border:none; border-bottom:1px solid #000; border-top:1px solid #000; font-weight:normal;  padding-bottom:9px;">BILL DATE</th>
                                        <th style="width:15%; min-width:90px; text-align:center; white-space: nowrap; white-space: nowrap; border:none; border-bottom:1px solid #000; border-top:1px solid #000; font-weight:normal;  padding-bottom:9px;">BILLAMOUNT</th>
                                        <th style="width:15%; min-width:90px; text-align:center; white-space: nowrap; border:none; border-bottom:1px solid #000; border-top:1px solid #000; font-weight:normal;  padding-bottom:9px;">DEDUCTIONS ADVRECOVERY</th>
                                        <th style="width:10%; min-width:80px; text-align:center; white-space: nowrap; border:none; border-bottom:1px solid #000; border-top:1px solid #000; font-weight:normal;  padding-bottom:9px;">TDS</th>
                                        <th style="width:10%; min-width:80px; text-align:center; white-space: nowrap; border:none; border-bottom:1px solid #000; border-top:1px solid #000; font-weight:normal;  padding-bottom:9px;">WCT</th>
                                        <th style="width:10%; min-width:90px; text-align:center; white-space: nowrap; border:none; border-bottom:1px solid #000; border-top:1px solid #000; font-weight:normal; padding-bottom:9px;">NET AMOUNT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var innerDet in item.InnerTransactions)
                                    {
                                        <tr>
					    <td style="padding-left:3px; min-width:110px; max-width:120px; border:none;  word-wrap:break-word; padding-bottom:9px;" align="left">@innerDet.BillNo</td>
                                            <td align="center" style="border:none; padding-bottom:9px;">@innerDet.BillDate</td>
                                            <td align="right" style="border:none; padding-bottom:9px;">@innerDet.BillAmount</td>
                                            <td align="center" style="border:none; padding-bottom:9px;">@innerDet.DedAdvRecovery</td>
                                            <td align="right" style="border:none; padding-bottom:9px;">@innerDet.Tds</td>
                                            <td align="center" style="border:none; padding-bottom:9px;">@innerDet.Wct</td>
                                            <td align="right" style="padding-right:3px; padding-bottom:9px;">@innerDet.NetAmount</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
					<td colspan="5" style="border:none; border-bottom:1px solid #000; border-top:1px solid #000;">
                                            <span class="text3" style=" padding-left:3px"> Raiser Name: @item.RaiserName (@item.RaiserCode)</span>
                                        </td>
                                        <td colspan="2" align="right" style="border:none; border-bottom:1px solid #000; border-top:1px solid #000;">
                                            <span class="text3" style=" padding-right:3px"> Total : @item.Total</span>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        
                    </div>
                    <br />
                    <div style="width:100%;">
                            <p >
                                ENCL: Cheque No. @if (item.ChequeNo == "" || item.ChequeNo == null)
                                { <span style="padding-right:40px;">&nbsp;</span> }
                                else
                                { @item.ChequeNo <span style="padding-right:15px;">&nbsp;</span> }
                                Cheque Date: @if (item.ChequeDate == "" || item.ChequeDate == null)
                                { <span style="padding-right:40px;">&nbsp;</span> }
                                else
                                { @item.ChequeDate <span style="padding-right:15px;">&nbsp;</span> }
                                Location: @if (item.Location == "" || item.Location == null)
                                { <span style="padding-right:60px;">&nbsp;</span> }
                                else
                                { @item.Location }



                                <br />
                                PLEASE PRESERVE THIS ADVICE TO VERIFY WITH FORM 16-A,
                                TO BE SENT AT THE END OF FINANCIAL YEAR
                            </p>
                        </div>
                    
                    <div style="width:100%;">
                            <p>
                                You are requested to intimate your Permanent Account Number. We have to bring to
                                your notice that the failure to intimate Permanent Account Number entails penalty
                                under section 272B of the Income tax Act, 1961.
                            </p>
                    </div>
                }
                <p style="page-break-before:always"></p>
            }
        }
    </div>
</body>
</html>

<script type="text/javascript">
    window.print()
    window.focus()
</script>