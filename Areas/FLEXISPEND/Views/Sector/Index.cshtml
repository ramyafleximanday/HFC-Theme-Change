@using IEM.Helper;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<style>
    table, th, td {
        white-space: nowrap;
    }
</style>
<div class="pageHeadingLayout">
    <span class="pageHeading">Sectorwise Report</span>
</div>
<div class="well">
    <div style="width:100%; overflow:auto; height:100%; margin-top: 15px;">


        <table id="gvsectorreport" class="tableSmall table-bordered table-hover table-responsive" data-bind="visible: Sectorreportsummary().length > 0">
            <thead>
                <tr>
                    <th style="width:5%; min-width:50px;">
                        SLNo
                    </th>
                    <th style="width:10%; min-width:100px;">
                        Branch Code
                    </th>
                    <th style="width:10%; min-width:150px;">
                        Employee code
                    </th>
                    <th style="width:8%; min-width:100px;">
                        Employee Name
                    </th>
                    <th style="width:10%; min-width:140px;">
                        Amount
                    </th>
                    <th style="width:10%; min-width:180px;">
                        ChqNo
                    </th>

                </tr>
            </thead>
            <tbody data-bind="foreach:{ data: Sectorreportsummary, afterRender: DatatableCall }, visible: Sectorreportsummary().length > 0">
                <tr>
                    <td style="width:5%; min-width:50px;" align="center">
                        <span data-bind="text: SlNo"></span>
                    </td>
                    <td style="width:10%; min-width:100px;" align="center">
                        <span data-bind="text: Branchcode"></span>
                    </td>
                    <td style="width:10%; min-width:150px;" align="center">
                        <span data-bind="text: Employeecode"></span>
                    </td>
                    <td style="width:8%; min-width:100px;" align="right">
                        <span data-bind="text: Employeename"></span>
                    </td>
                    <td style="width:10%; min-width:180px;">
                        <span data-bind="text: Amount"></span>
                    </td>
                    <td style="width:8%; min-width:100px;" align="center">
                        <span data-bind="text: ChqNO"></span>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="@Url.Content("~/Areas/FLEXISPEND/FS_UserScript/jssectorreport.js")" type="text/javascript"></script>