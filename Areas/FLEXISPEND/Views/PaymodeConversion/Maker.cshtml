@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

<style>
    table, th, td {
        white-space: nowrap;
    }
</style>
<div class="pageHeadingLayout">
    <span class="pageHeading">Payment Reissue - Maker</span>
    </div>
    <div class="well">
        <table class="myTableStyleTabNew" style="width:100%;">
            <tr>
                <td width="25%" style="padding: 0px 10px">
                    <span>PV From</span>
                    <br />
                    <input type="text"
                           name="txtPVFrom"
                           id="txtPVFrom"
                           onkeypress="return isEvent(event)"
                           maxlength="10"
                           class="fstextbox fsdatepicker" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>PV To</span>
                    <br />
                    <input type="text"
                           name="txtPVTo"
                           id="txtPVTo"
                           onkeypress="return isEvent(event)"
                           maxlength="10"
                           class="fstextbox fsdatepicker" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>PV No</span>
                    <br />
                    <input type="text"
                           id="txtPVNo"
                           name="txtPVNo"
                           value=""
                           class="fstextbox" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>Amount</span>
                    <br />
                    <input type="text"
                           name="txtAmount"
                           id="txtAmount"
                           value=""
                           @*onkeypress="return isNumberKey(event)"*@
                           maxlength="8"
                           class="fstextbox" />
                </td>
            </tr>
            <tr>
                <td width="25%" style="padding: 0px 10px">
                    <span>Employee Code</span>
                    <br />
                    <input type="hidden" id="hdfEmpCodeId" value="0" />
                    <input type="text"
                           id="txtEmpCode"
                           name="txtEmpCode"
                           class="fstextbox" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>Employee Name</span>
                    <br />
                    <input type="hidden" id="hdfEmpName" value="0" />
                    <input type="text"
                           id="txtEmpName"
                           name="txtEmpName"
                           class="fstextbox" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>Supplier Code</span>
                    <br />
                    <input type="hidden" id="hdfSupplierId" value="0" />
                    <input type="text"
                           id="txtSupplierCode"
                           name="txtSupplierCode"
                           class="fstextbox" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>Supplier Name</span>
                    <br />
                    <input type="hidden" id="hdfSupplierName" value="0" />
                    <input type="text"
                           id="txtSupplierName"
                           name="txtSupplierName"
                           class="fstextbox" />
                </td>
            </tr>
            <tr>
                <td width="25%" style="padding: 0px 10px">
                    <span>Bounce From</span>
                    <br />
                    <input type="text"
                           name="txtBounceFrom"
                           id="txtBounceFrom"
                           onkeypress="return isEvent(event)"
                           maxlength="10"
                           class="fstextbox fsdatepicker" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>Bounce To</span>
                    <br />
                    <input type="text"
                           name="txtBounceTo"
                           id="txtBounceTo"
                           onkeypress="return isEvent(event)"
                           maxlength="10"
                           class="fstextbox fsdatepicker" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>Cheque No</span>
                    <br />
                    <input type="text"
                           id="txtChequeNo"
                           name="txtChequeNo"
                           value=""
                           class="fstextbox" />
                </td>
                <td width="25%" style="padding: 0px 10px">
                    <span>Memo No</span>
                    <br />
                    <input type="text"
                           name="txtMemoNo"
                           id="txtMemoNo"
                           value=""
                           class="fstextbox" />
                </td>
            </tr>
            <tr>
                <td width="25%" style="padding: 0px 10px">
                    <span>Pay Mode</span>
                    <br />
                    <select name="ddlPayMode" id="ddlPayMode" class="fstextbox"
                            data-bind="options: PaymentModeArray, optionsText: 'Text', optionsValue:'Id', value:0, optionsCaption:'- Select One -'"></select>

                </td>
                <td width="25%" style="padding: 0px 10px"></td>
                <td width="25%" style="padding: 0px 10px"></td>
                <td width="25%" style="padding: 0px 10px">
                    <button class="btn btn-primary" accesskey="q" id="btnsearch" data-bind="click: $root.search" type="button" style="margin-top:10px;  color:white;">
                        <span style="color:white;" class="glyphicon glyphicon-search"></span>
                        Search
                    </button>
                    <button class="btn btn-primary" accesskey="c" data-bind="click: $root.clearFilter" type="button" style="margin-top:10px;  color:white;">
                        <span style="color:white;" class="glyphicon glyphicon-refresh"></span>
                        Clear
                    </button>
                </td>
            </tr>
        </table>
        <div style="width:100%; overflow:auto; height:100%; margin-top: 15px;">
            <table id="gvMaker" class="tableSmall table-bordered table-hover table-responsive" data-bind="visible: MakerDetailArray().length > 0">
                <thead>
                    <tr>
                        <th style="width:4%; min-width:50px;">
                            SLNo
                        </th>
                        <th style="width:9%; min-width:100px;" class="colDate">
                            PV Date
                        </th>
                        <th style="width:10%; min-width:100px;">
                            PV No
                        </th>
                        <th style="width:8%; min-width:100px;">
                            Amount
                        </th>
                        <th style="width:10%; min-width:100px;">
                            Supplier/Employee Code
                        </th>
                        <th style="width:10%; min-width:180px;">
                            Supplier/Employee Name
                        </th>
                        <th style="width:10%; min-width:80px;">
                            PayMode
                        </th>
                        <th style="width:10%; min-width:90px;">
                            Cheque No
                        </th>
                        <th style="width:8%; min-width:100px;">
                            Memo No
                        </th>
                        <th style="width:8%; min-width:200px;">
                            Bank Name
                        </th>
                        <th style="width:8%; min-width:200px;">
                            Beneficiary Name
                        </th>
                        <th style="width:5%; min-width:80px;" class="nosort">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach:{ data: MakerDetailArray, afterRender: DatatableCall }, visible: MakerDetailArray().length > 0" *@>
                    <tr>
                        <td style="width:5%; min-width:50px;" align="center">
                            <span data-bind="text: SlNo"></span>
                        </td>
                        <td style="width:12%; min-width:100px;" align="center">
                            <span data-bind="text: PvDate"></span>
                        </td>
                        <td style="width:10%; min-width:100px;" align="left">
                            <span data-bind="text: PvNo"></span>
                        </td>
                        <td style="width:10%; min-width:100px;" align="right">
                            <span data-bind="text: $root.formatNumber(PvAmount)"></span>
                        </td>
                        <td style="width:15%; min-width:100px;" align="left">
                            <span data-bind="text: EmployeeSupplierCode"></span>
                        </td>
                        <td style="width:12%; min-width:180px;" align="left">
                            <span data-bind="text: EmployeeSupplierName"></span>
                        </td>
                        <td style="width:10%; min-width:80px;" align="left">
                            <span data-bind="text: PayMode"></span>
                        </td>
                        <td style="width:18%; min-width:90px;" align="left">
                            <span data-bind="text: ChqNo"></span>
                        </td>
                        <td style="width:10%; min-width:100px;" align="left">
                            <span data-bind="text: MemoNo"></span>
                        </td>
                        <td style="width:10%; min-width:200px;" align="left">
                            <span data-bind="text: Bank"></span>
                        </td>
                        <td style="width:10%; min-width:200px;" align="left">
                            <span data-bind="text: Beneficiary"></span>
                        </td>
                        <td style="width:8%; min-width:80px;" align="center">
                            <span style="cursor:pointer;color:blue; text-decoration:underline;" title="Select" data-bind="click: $root.Reissue">Reissue</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div style="display:none;" id="ShowDialog">
        <span class="pageHeading">Payment Details</span>
        <table class="myTableStyleTabNew" style="width:100%;">
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>PV Date</span>
                    <br />
                    <label id="lblPVDate" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>PV No</span>
                    <br />
                    <label id="lblPVNo" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>PV Amount</span>
                    <br />
                    <label id="lblPVAmount" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
            </tr>
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>Pay Mode</span>
                    <br />
                    <label id="lblPayMode" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>Cheque No</span>
                    <br />
                    <label id="lblChequeNo" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>Memo No</span>
                    <br />
                    <label id="lblMemoNo" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
            </tr>
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>Bank Name</span>
                    <br />

                    <input type="hidden" id="hfPvIdReissue" value="0" />
                    <label id="lblBankName" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>A/C No</span>
                    <br />
                    <label id="lblAcNo" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>IFSC Code</span>
                    <br />
                    <label id="lblIFSCCode" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
            </tr>
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>Type</span>
                    <br />
                    <label id="lblType" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>Supplier/Employee Code</span>
                    <br />
                    <label id="lblSECode" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>Supplier/Employee Name</span>
                    <br />
                    <label id="lblSEName" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
            </tr>
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>Bounce Date</span>
                    <br />
                    <label id="lblbounceDate" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
                <td colspan="2" style="width:66%; padding:0px 5px;">
                    <span>Bounce Reason</span>
                    <br />
                    <label id="txtBounceReason" class="lblFrom" style="background-color:whitesmoke;"></label>
                </td>
            </tr>
        </table>
        <span class="pageHeading">Payment Reissue</span>
        <table class="myTableStyleTabNew" style="width:100%;">
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>New PayMode</span>
                    <br />
                    <select name="ddlPayModeReissue" id="ddlPayModeReissue" class="fstextbox valid"
                            data-bind="options: PaymentModeArray, optionsText: 'Text', optionsValue:'Id', value:0"></select>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>Beneficiary Name</span>
                    <br />
                    <input id="txtMBeneficiaryName" disabled="disabled" class="fstextbox " />
                </td>
                <td style="width:5%; padding:0px 0px 0px 3px;">
                    <span title="view" data-bind="click: function() { $root.FetchBenificiary(); }" style="margin-left:1px; margin-right:1px; cursor:pointer;"> <span style="font-size: 18px; color: #337ab7; margin-top: 8px;" class="glyphicon glyphicon-eye-open"> </span> </span>
                </td>
                <td style="width:33%; padding:0px 5px;">
                    <span>A/C No</span>
                    <br />
                    @*<label id="txtMAcNo" class="lblFrom" style="background-color:whitesmoke;"></label>*@
                    <input id="txtMAcNo" disabled="disabled" class="fstextbox " />
                </td>
            </tr>
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>IFSC Code</span>
                    <br />
                    @*<label id="txtMIFSCCode" class="lblFrom" style="background-color:whitesmoke;"></label>*@
                    <input id="txtMIFSCCode" disabled="disabled" class="fstextbox " />
                </td>
                <td colspan="3" style="width:66%; padding:0px 5px;">
                    <span>Bank Name</span>
                    <br />
                    @*<label id="txtMBankName" class="lblFrom" style="background-color:whitesmoke;"></label>*@
                    <select id="txtMBankName" class="fstextbox required" data-bind="foreach: {data: PayBankArray}">
                        <option data-bind="attr: {value: Id}, text: Combo"></option>
                    </select>
                    <input type="hidden" id="hfBankIdReissue" value="0" />
                </td>

            </tr>
            <tr>
                <td style="width:33%; padding:0px 5px;">
                    <span>Description</span>
                    <br />
                    <textarea id="txtMDescription" class="fstextbox" style="height:40px;"></textarea>
                </td>
                <td colspan="3" style="width:66%; padding:0px 5px;">
                    <span>Remark</span>
                    <br />
                    <textarea id="txtMRemark" rows="3" class="fstextbox required" style="height:40px;"></textarea>
                </td>


            </tr>
            <tr>
                <td colspan="3" align="right" style="padding-top:10px; text-align:right;">
                    <button type="button" accesskey="s" class="btn btn-success" id="btnSubmit" data-bind="click: $root.Submit">
                        <span class="glyphicon glyphicon-ok" style="color:white;"></span>
                        Submit
                    </button>
                </td>
            </tr>

        </table>
    </div>
<div style="width:100%; display:none;" id="BenificiaryDialog">
    <div class="table-responsive" style="height: 300px; overflow: auto;">
        <table class="tableSmall table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:5%; min-width:40px;">
                        #
                    </th>
                    <th style="width:25%; min-width:100px;">
                        Account No
                    </th>
                    <th style="width:35%; min-width:150px;">
                        Benificiary Name
                    </th>
                    <th style="width:25%; min-width:120px;">
                        IFSC Code
                    </th>
                    <th style="width:10%; min-width:100px;">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach: {data: BenificiaryArray}">
                <tr>
                    <td align="center">
                        <span data-bind="text: $index() + 1"></span>
                    </td>
                    <td>
                        <span data-bind="text: AccountNo"></span>
                    </td>
                    <td>
                        <span data-bind="text: BeneficiaryName"></span>
                    </td>
                    <td align="center">
                        <span data-bind="text: IFSCCode"></span>
                    </td>
                    <td align="center">
                        <a style="cursor:pointer; color: #116BAC;" data-bind="click: $root.SelectBenificiary">Select</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    @*<div style="width:100%; text-align:center;">
        <button type="button" style="color:white; margin-top:10px; font-size:12px;" title="Cancel" name="Cancel" data-bind="click: function() { $root.CloseDetails(12); }" class="btn btn-warning">
            <span style="color:white; font-size:13px;" class="glyphicon glyphicon-remove-sign"></span>
            Cancel
        </button>

    </div>*@
</div>
