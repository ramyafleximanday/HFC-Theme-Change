@model IList<IEM.Areas.FLEXISPEND.Controllers.AddressDetail>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Address Label Printing</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @*<div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-6 col-xs-6" style="padding:15px;">
                    @if (@item.Type.ToLower() == "1")
                    {
                        <span> @item.LocationCode</span><br />
                        <span> @item.CompanyName</span><br />
                    }
                    <span > @item.Address</span>
                </div>
            }
        </div>*@
    <div style="width:100%;">
        <table style="width:100%;border-collapse: separate;border-spacing: 0px;">
            @for (int i = 0; i < Model.Count; i += 2)
            {
                <tr>
                    <td style="width:50%; vertical-align:top; text-align:left; height:215px; padding-right:120px;">
                        @if (Model[i].Type.ToLower() == "1")
                        {
                            <span> @Model[i].LocationCode</span><br />
                            <span> @Model[i].CompanyName</span><br />
                        }
                        <span> @Model[i].Address</span>
                    </td>
                    <td style="width:50%; vertical-align:top; text-align:left; height:215px; padding-right:120px;">
                        @if (i + 1 < Model.Count)
                        {
                            if (Model[i + 1].Type.ToLower() == "1")
                            {
                                <span> @Model[i + 1].LocationCode</span><br />
                                <span> @Model[i + 1].CompanyName</span><br />
                            }
                            <span> @Model[i + 1].Address</span>
                        }
                    </td>
                </tr>
            }
        </table>

        <div class="col-sm-6 col-md-6 col-xs-6" style="padding:15px;">

        </div>

    </div>

</body>
</html>

<script type="text/javascript">
    window.print()
    window.focus()
</script>
