@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Rmax_Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

<style>
    /*table, th, td {
        white-space: nowrap;
    }*/
</style>
<div class="pageHeadingLayout">
    <span class="pageHeading">Cheque Inventory</span>
</div>
<div class="well" style="padding:10px;">
    <div class="pageHeadingLayout">
        <span class="pageHeading">Cheque Book Entry</span>
    </div>
    <table width="100%">
        <tr>
            <td style="width:40%; vertical-align:top;">
                <table class="myTableStyleTabNew" style="width:100%;">
                    <tr>
                        <td colspan="2" style="width:20%; padding:0px 10px 0px 3px;">
                            <span>Bank </span>
                            <br />
                            <select name="ddlEBank" id="ddlEBank" class="fstextbox" style="width:100%;" data-bind="options: BankArray, optionsText: 'Text', optionsValue:'Id', value: 0, event:{ change: $root.GetBankBookDetails }"></select>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:20%; padding:0px 10px 0px 3px;">
                            <span>Date </span>
                            <br />
                            <input type="text"
                                   id="txtEDate"
                                   onkeypress="return isEvent(event)"
                                   class="fstextbox fsdatepicker required" />
                        </td>
                        <td style="width:20%; padding:0px 10px 0px 3px;">
                            <span>CHQ Book No </span>
                            <br />
                            <input type="text"
                                   id="txtECHQBookNo"
                                   maxlength="32"
                                   onkeypress="return isNumberAndLetterAndSpace(event)"
                                   class="fstextbox required" />
                        </td>

                    </tr>
                    <tr>
                        <td style="width:20%; padding:0px 10px 0px 3px;">
                            <span>CHQ No From </span>
                            <br />
                            <input type="text"
                                   id="txtECHQNoFrom"
                                   maxlength="6"
                                   onkeypress="return isNumberKey(event)"
                                   class="fstextbox required" />
                        </td>
                        <td style="width:20%; padding:0px 10px 0px 3px;">
                            <span>CHQ No To </span>
                            <br />
                            <input type="text"
                                   id="txtECHQNoTo"
                                   maxlength="6"
                                   onkeypress="return isNumberKey(event)"
                                   class="fstextbox required" />
                        </td>

                    </tr>
                    <tr>
                        <td style="width:20%; padding:0px 10px 0px 3px;"></td>
                        <td style="width:20%; padding:0px 10px 0px 3px; text-align:right;">
                            <button class="btn btn-primary" id="btnESave" data-bind="click: $root.SaveCHQEntry" style="margin-top:10px;  color:white;">
                                <span style="color:white; font-size:12px;" class="glyphicon glyphicon-download-alt"></span>
                                Submit
                            </button>
                            <button class="btn btn-primary" data-bind="click: $root.ClearCHQEntry" style="margin-top:10px;  color:white;">
                                <span style="color:white; font-size:12px;" class="glyphicon glyphicon-refresh"></span>
                                Clear
                            </button>
                        </td>

                    </tr>
                </table>
            </td>
            <td style="width:50%;  vertical-align:top;">
                <table style="width:100%;">
                    <tr>
                        <td>
                            <div style="max-height: 210px; overflow: auto; height:100%;">
                                <table class="tableSmall table-bordered table-hover table-responsive">
                                    <thead>
                                        <tr>
                                            <th style="width:10%; min-width:50px;">
                                                SLNo
                                            </th>
                                            <th style="width:20%; min-width:100px;">
                                                Cheque Book
                                            </th>
                                            <th style="width:55%; min-width:200px; max-width:250px;">
                                                Available Chq No
                                            </th>
                                            <th style="width:15%; min-width:100px;">
                                                Total
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody data-bind="foreach: ChequeBookDetails, visible: ChequeBookDetails().length > 0">
                                        <tr>
                                            <td align="center">
                                                <span data-bind="text: Sno"></span>
                                            </td>
                                            <td align="left">
                                                <span data-bind="text: ChqBook"></span>
                                            </td>
                                            <td align="left">
                                                <span data-bind="text: $root.ShortDescription(AvailableChqNo)"></span>
                                            </td>
                                            <td align="left">
                                                <span data-bind="text: TotCount"></span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>

<div class="well" style="padding:10px;">
    <div class="pageHeadingLayout">
        <span class="pageHeading">Damage Cheque Entry</span>
    </div>
    <table class="myTableStyleTabNew" style="width:100%;">
        <tr>
            <td colspan="2" style="width:40%; padding:0px 10px 0px 3px;">
                <span>Bank </span>
                <br />
                <select name="ddlDBank" id="ddlDBank" class="fstextbox" style="width:100%;" data-bind="options: BankArray, optionsText: 'Text', optionsValue:'Id', value: 0"></select>
            </td>
            <td style="width:60%;"></td>
        </tr>
        <tr>
            <td style="width:20%; padding:0px 10px 0px 3px;">
                <span>CHQ Book No </span>
                <br />
                <input type="text"
                       id="txtDCHQBookNo"
                       onkeypress="return isNumberAndLetterAndSpace(event)"
                       maxlength="32"
                       class="fstextbox required" />
            </td>
            <td style="width:20%; padding:0px 10px 0px 3px;">
                <span>CHQ No </span>
                <br />
                <input type="text"
                       id="txtDCHQNo"
                       maxlength="6"
                       onkeypress="return isNumberKey(event)"
                       class="fstextbox required" />
            </td>
            <td style="width:60%;"></td>
        </tr>
        <tr>
            <td colspan="2" style="width:40%; padding:0px 10px 0px 3px;">
                <span>Reason </span>
                <br />
                <input type="text"
                       id="txtDReason"
                       maxlength="150"
                       class="fstextbox required" />
                @*<select name="ddlDReason" id="ddlDReason" class="fstextbox" style="width:100%;" data-bind="options: ParentDDArray, optionsText: 'ParentName', optionsValue:'ParentId', value: 0"></select>*@
            </td>
            <td style="width:60%;"></td>
        </tr>
        <tr>
            <td style="width:20%; padding:0px 10px 0px 3px;"></td>
            <td style="width:20%; padding:0px 10px 0px 3px; text-align:right;">
                <button class="btn btn-primary" id="btnDSave" data-bind="click: $root.SaveDmg" style="margin-top:10px;  color:white;">
                    <span style="color:white; font-size:12px;" class="glyphicon glyphicon-download-alt"></span>
                    Submit
                </button>
                <button class="btn btn-primary" data-bind="click: $root.ClearDamageEntry" style="margin-top:10px;  color:white;">
                    <span style="color:white; font-size:12px;" class="glyphicon glyphicon-refresh"></span>
                    Clear
                </button>
            </td>
            <td style="width:60%;"></td>
        </tr>
    </table>
</div>

<script>
    var UrlDet = "@Url.Action("GetChequeListDetails", "Payment")"
    var UrlHelper = "@Url.Action("GetAutoCompleteCourier", "Helper")"
</script>

<script src="@Url.Content("~/Areas/FLEXISPEND/FS_UserScript/jsChequeInventory.js")" type="text/javascript"></script>
